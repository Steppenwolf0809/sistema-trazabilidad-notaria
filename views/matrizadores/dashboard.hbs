<script>
  // Mostrar/ocultar selector de fechas personalizadas
  document.getElementById('tipoPeriodo').addEventListener('change', function() {
    const fechasPersonalizadas = document.getElementById('fechasPersonalizadas');
    if (this.value === 'personalizado') {
      fechasPersonalizadas.style.display = 'flex';
    } else {
      fechasPersonalizadas.style.display = 'none';
    }
  });

  // Configuraci√≥n de gr√°ficos cuando los datos est√©n disponibles
  document.addEventListener('DOMContentLoaded', function() {
    // Cambio entre diferentes gr√°ficos
    document.getElementById('btnProductividad').addEventListener('click', function() {
      document.getElementById('graficoProductividad').style.display = 'block';
      document.getElementById('graficoTiempos').style.display = 'none';
      document.getElementById('graficoTipos').style.display = 'none';
      this.classList.add('active');
      document.getElementById('btnTiempos').classList.remove('active');
      document.getElementById('btnTipos').classList.remove('active');
    });

    document.getElementById('btnTiempos').addEventListener('click', function() {
      document.getElementById('graficoProductividad').style.display = 'none';
      document.getElementById('graficoTiempos').style.display = 'block';
      document.getElementById('graficoTipos').style.display = 'none';
      this.classList.add('active');
      document.getElementById('btnProductividad').classList.remove('active');
      document.getElementById('btnTipos').classList.remove('active');
    });

    document.getElementById('btnTipos').addEventListener('click', function() {
      document.getElementById('graficoProductividad').style.display = 'none';
      document.getElementById('graficoTiempos').style.display = 'none';
      document.getElementById('graficoTipos').style.display = 'block';
      this.classList.add('active');
      document.getElementById('btnProductividad').classList.remove('active');
      document.getElementById('btnTiempos').classList.remove('active');
    });

    // Inicializar gr√°ficos si hay datos
    if (typeof Chart !== 'undefined') {
      {{#if datosGraficos}}
        // Gr√°fico de productividad
        const ctxProductividad = document.getElementById('productividadChart').getContext('2d');
        const labelsProductividad = {{{json datosGraficos.productividad.labels}}};
        const datosProductividad = {{{json datosGraficos.productividad.datos}}};
        
        new Chart(ctxProductividad, {
          type: 'line',
          data: {
            labels: labelsProductividad,
            datasets: [{
              label: 'Documentos procesados',
              data: datosProductividad,
              backgroundColor: 'rgba(54, 162, 235, 0.2)',
              borderColor: 'rgba(54, 162, 235, 1)',
              borderWidth: 2,
              tension: 0.4
            }]
          },
          options: {
            scales: {
              y: {
                beginAtZero: true,
                title: {
                  display: true,
                  text: 'Cantidad de documentos'
                }
              },
              x: {
                title: {
                  display: true,
                  text: 'Fecha'
                }
              }
            }
          }
        });

        // Gr√°fico de tiempos
        const ctxTiempos = document.getElementById('tiemposChart').getContext('2d');
        const labelsTiempos = {{{json datosGraficos.tiempos.labels}}};
        const datosTiempos = {{{json datosGraficos.tiempos.datos}}};
        
        new Chart(ctxTiempos, {
          type: 'bar',
          data: {
            labels: labelsTiempos,
            datasets: [{
              label: 'Tiempo promedio (d√≠as)',
              data: datosTiempos,
              backgroundColor: 'rgba(255, 159, 64, 0.2)',
              borderColor: 'rgba(255, 159, 64, 1)',
              borderWidth: 1
            }]
          },
          options: {
            scales: {
              y: {
                beginAtZero: true,
                title: {
                  display: true,
                  text: 'D√≠as'
                }
              }
            }
          }
        });

        // Gr√°fico por tipos
        const ctxTipos = document.getElementById('tiposChart').getContext('2d');
        const labelsTipos = {{{json datosGraficos.tipos.labels}}};
        const datosTipos = {{{json datosGraficos.tipos.datos}}};
        
        new Chart(ctxTipos, {
          type: 'pie',
          data: {
            labels: labelsTipos,
            datasets: [{
              data: datosTipos,
              backgroundColor: [
                'rgba(54, 162, 235, 0.7)',
                'rgba(255, 99, 132, 0.7)',
                'rgba(255, 206, 86, 0.7)',
                'rgba(75, 192, 192, 0.7)',
                'rgba(153, 102, 255, 0.7)',
                'rgba(255, 159, 64, 0.7)',
                'rgba(199, 199, 199, 0.7)'
              ],
              borderWidth: 1
            }]
          },
          options: {
            responsive: true,
            maintainAspectRatio: true,
            plugins: {
              legend: {
                position: 'bottom',
                labels: {
                  boxWidth: 12,
                  font: {
                    size: 11
                  }
                }
              }
            }
          }
        });
      {{/if}}
    }
    
    // ============== FORMATEAR FECHAS DE DOCUMENTOS EN DASHBOARD ==============
    console.log('üïí Iniciando formateo de fechas en dashboard de matrizador...');
    
    // Funci√≥n para formatear fecha de manera robusta
    function formatearFechaSegura(fechaRaw) {
      if (!fechaRaw || fechaRaw === 'null' || fechaRaw === '' || fechaRaw === 'undefined') {
        return 'Sin fecha';
      }
      
      try {
        // Intentar diferentes formatos de fecha
        let fecha;
        
        // Si ya es un objeto Date
        if (fechaRaw instanceof Date) {
          fecha = fechaRaw;
        }
        // Si es un string ISO
        else if (typeof fechaRaw === 'string') {
          // Limpiar la fecha de caracteres extra√±os
          const fechaLimpia = fechaRaw.trim();
          fecha = new Date(fechaLimpia);
        }
        // Si es un timestamp
        else if (typeof fechaRaw === 'number') {
          fecha = new Date(fechaRaw);
        }
        else {
          console.warn('Formato de fecha no reconocido:', fechaRaw);
          return 'Formato inv√°lido';
        }
        
        // Verificar si la fecha es v√°lida
        if (isNaN(fecha.getTime())) {
          console.warn('Fecha inv√°lida despu√©s de conversi√≥n:', fechaRaw);
          return 'Fecha inv√°lida';
        }
        
        return fecha;
      } catch (error) {
        console.error('Error procesando fecha:', error, 'Fecha original:', fechaRaw);
        return 'Error en fecha';
      }
    }
    
    // Formatear fechas de documentos en dashboard
    document.querySelectorAll('.fecha-documento-dashboard').forEach(function(elemento) {
      const fechaRaw = elemento.getAttribute('data-fecha');
      console.log('üìÖ Procesando fecha de documento en dashboard:', fechaRaw);
      
      const fechaFormateada = formatearFechaSegura(fechaRaw);
      
      if (fechaFormateada instanceof Date) {
        elemento.textContent = fechaFormateada.toLocaleDateString('es-EC', {
          day: '2-digit',
          month: '2-digit', 
          year: 'numeric'
        });
        elemento.classList.add('text-success');
      } else {
        elemento.textContent = fechaFormateada;
        elemento.classList.add('text-muted');
      }
    });
    
    console.log('‚úÖ Formateo de fechas de documentos en dashboard completado');
  });
</script>

