<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <span><i class="fas fa-list me-2"></i> Mis Documentos</span>
    <a href="/matrizador/documentos/registro" class="btn btn-sm btn-primary">
      <i class="fas fa-plus me-1"></i> Nuevo Documento
    </a>
  </div>
  <div class="card-body">
    <!-- Filtros -->
    <div class="row mb-4">
      <div class="col-md-12">
        <div class="card bg-light">
          <div class="card-body p-3">
            <form id="filtrosForm" method="GET" action="/matrizador/documentos">
              <div class="row">
                <div class="col-md-3 mb-2">
                  <label for="filtroEstado" class="form-label small">Estado</label>
                  <select class="form-select form-select-sm" id="filtroEstado" name="estado">
                    <option value="">Todos</option>
                    <option value="en_proceso" {{#if filtros.estado.en_proceso}}selected{{/if}}>En Proceso</option>
                    <option value="listo_para_entrega" {{#if filtros.estado.listo_para_entrega}}selected{{/if}}>Listos para Entrega</option>
                    <option value="entregado" {{#if filtros.estado.entregado}}selected{{/if}}>Entregados</option>
                    <option value="cancelado" {{#if filtros.estado.cancelado}}selected{{/if}}>Cancelados</option>
                  </select>
                </div>
                
                <div class="col-md-3 mb-2">
                  <label for="filtroTipo" class="form-label small">Tipo de Documento</label>
                  <select class="form-select form-select-sm" id="filtroTipo" name="tipoDocumento">
                    <option value="">Todos</option>
                    {{#each tiposDocumento}}
                    <option value="{{this}}" {{#if (eq ../filtros.tipoDocumento this)}}selected{{/if}}>{{this}}</option>
                    {{/each}}
                  </select>
                </div>
                
                <div class="col-md-2 mb-2">
                  <label for="fechaDesde" class="form-label small">Desde</label>
                  <input type="date" class="form-control form-control-sm" id="fechaDesde" name="fechaDesde" value="{{filtros.fechaDesde}}">
                </div>
                
                <div class="col-md-2 mb-2">
                  <label for="fechaHasta" class="form-label small">Hasta</label>
                  <input type="date" class="form-control form-control-sm" id="fechaHasta" name="fechaHasta" value="{{filtros.fechaHasta}}">
                </div>
                
                <div class="col-md-2 mb-2">
                  <label for="filtroBusqueda" class="form-label small">B√∫squeda</label>
                  <input type="text" class="form-control form-control-sm" id="filtroBusqueda" name="busqueda" placeholder="C√≥digo o nombre del cliente" value="{{filtros.busqueda}}">
                </div>
                
                <div class="col-md-12 text-end">
                  <button type="submit" class="btn btn-sm btn-primary">
                    <i class="fas fa-filter me-1"></i> Filtrar
                  </button>
                  <a href="/matrizador/documentos" class="btn btn-sm btn-outline-secondary ms-1">
                    <i class="fas fa-times me-1"></i> Limpiar
                  </a>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    
    <!-- üéØ TABLA UNIVERSAL MATRIZADORES - MIGRACI√ìN COMPLETA -->
    <div class="table-responsive">
      <table class="table table-hover tabla-ordenable table-documentos" id="tablaDocumentosMatrizadores">
        <thead>
          <tr>
            <th class="col-codigo ordenable" data-columna="codigoBarras" data-tipo="texto">
              <span>C√≥digo</span>
              <i class="fas fa-sort ms-1 sort-icon"></i>
            </th>
            <th class="col-cliente ordenable" data-columna="nombreCliente" data-tipo="texto">
              <span>Cliente</span>
              <i class="fas fa-sort ms-1 sort-icon"></i>
            </th>
            <th class="col-fecha ordenable" data-columna="fechaFactura" data-tipo="fecha">
              <span>Fecha</span>
              <i class="fas fa-sort ms-1 sort-icon"></i>
            </th>
            <th class="col-estado ordenable" data-columna="estado" data-tipo="texto">
              <span>Estado Entrega</span>
              <i class="fas fa-sort ms-1 sort-icon"></i>
            </th>
            <th class="col-pago ordenable" data-columna="estadoPago" data-tipo="texto">
              <span>Estado Pago</span>
              <i class="fas fa-sort ms-1 sort-icon"></i>
            </th>
            <th class="col-valor ordenable" data-columna="valorFactura" data-tipo="numero">
              <span>Valor</span>
              <i class="fas fa-sort ms-1 sort-icon"></i>
            </th>
            <th class="col-acciones">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each documentos}}
          <tr {{#unless this.visto}}class="documento-nuevo"{{/unless}}>
            <!-- C√≥digo con formato mejorado -->
            <td class="col-codigo">
              <a href="/matrizador/documentos/detalle/{{this.id}}" class="codigo-link">
                <span class="codigo-documento">{{this.codigoBarras}}</span>
              </a>
              <div class="tipo-documento">
                  <small class="text-muted">{{this.tipoDocumento}}</small>
              </div>
              {{#unless this.visto}}
              <span class="badge badge-danger badge-nuevo ms-1">NUEVO</span>
              {{/unless}}
            </td>
            
            <!-- Cliente con formato mejorado (sin truncar) -->
            <td class="col-cliente">
              <div class="cliente-nombre">{{this.nombreCliente}}</div>
              <div class="cliente-identificacion">{{this.identificacionCliente}}</div>
            </td>
            
            <!-- Fecha (sin cambios) -->
            <td class="col-fecha">
              {{#if this.fechaFactura}}
              <span class="fecha-universal">{{formatFechaCorta this.fechaFactura}}</span>
              {{else}}
              <span class="fecha-universal sin-fecha">--/--/--</span>
              {{/if}}
            </td>
            
            <!-- Estado de Entrega (NUEVO BADGE) -->
            <td class="col-estado text-center">
              {{{badgeEstadoEntrega this.estado}}}
            </td>
            
            <!-- Estado de Pago (NUEVO BADGE) -->
            <td class="col-pago text-center">
              {{#if this.numeroFactura}}
                {{{badgeEstadoPago this.estadoPago}}}
              {{else}}
                <span class="badge bg-secondary" title="Documento sin factura asociada">
                    <i class="fas fa-file-invoice-dollar me-1"></i> S/F
                </span>
              {{/if}}
            </td>
            
            <!-- Valor con formato mejorado -->
            <td class="col-valor text-right">
              {{#if this.valorFactura}}
              <span class="valor-monetario">{{formatDineroCompleto this.valorFactura}}</span>
              {{else}}
              <span class="valor-monetario text-muted">$0.00</span>
              {{/if}}
            </td>
            
            <!-- Acciones (sin cambios) -->
            <td class="col-acciones text-center">
              <div class="btn-group btn-group-sm">
                <a href="/matrizador/documentos/detalle/{{this.id}}" class="btn btn-outline-primary btn-universal" title="Ver Detalle">
                  <i class="fas fa-eye"></i>
                </a>
                {{#if (ne this.estado 'entregado')}}
                <button class="btn btn-outline-success btn-universal" onclick="marcarComoListo({{this.id}})" title="Marcar como Listo">
                  <i class="fas fa-check"></i>
                </button>
                {{/if}}
                {{#unless this.visto}}
                <button class="btn btn-outline-info btn-universal" onclick="marcarComoVisto({{this.id}})" title="Marcar como Visto">
                  <i class="fas fa-eye-slash"></i>
                </button>
                {{/unless}}
              </div>
            </td>
          </tr>
          {{else}}
          <tr>
            <td colspan="7" class="text-center py-5">
              <div class="sin-resultados">
                <i class="fas fa-search fa-2x mb-3 text-muted"></i>
                <h5 class="text-muted">No se encontraron documentos</h5>
                <p class="mb-0 text-muted">Pruebe ajustando los filtros de b√∫squeda</p>
              </div>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    
    <!-- Paginaci√≥n -->
    {{#if pagination}}
    <nav aria-label="Paginaci√≥n de documentos">
      <ul class="pagination justify-content-center">
        {{#if pagination.prev}}
        <li class="page-item">
          <a class="page-link" href="{{pagination.prev}}">Anterior</a>
        </li>
        {{else}}
        <li class="page-item disabled">
          <a class="page-link">Anterior</a>
        </li>
        {{/if}}
        
        {{#each pagination.pages}}
        <li class="page-item {{#if this.active}}active{{/if}}">
          <a class="page-link" href="{{this.url}}">{{this.num}}</a>
        </li>
        {{/each}}
        
        {{#if pagination.next}}
        <li class="page-item">
          <a class="page-link" href="{{pagination.next}}">Siguiente</a>
        </li>
        {{else}}
        <li class="page-item disabled">
          <a class="page-link">Siguiente</a>
        </li>
        {{/if}}
      </ul>
    </nav>
    {{/if}}
  </div>
</div>

<!-- Modal de confirmaci√≥n para marcar como listo -->
<div class="modal fade" id="marcarListoModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Marcar documento como listo</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Al marcar este documento como listo para entrega, se generar√° un c√≥digo de verificaci√≥n de 4 d√≠gitos que ser√° enviado al cliente.</p>
        <p>¬øEst√° seguro de que el documento est√° listo para ser entregado?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <form id="marcarListoForm" action="/matrizador/documentos/marcar-listo" method="POST">
          <input type="hidden" id="documentoId" name="documentoId">
          <button type="submit" class="btn btn-success">Confirmar</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    console.log('üéØ Inicializando tabla MATRIZADORES - Sistema Universal v1.0');
    
    // Inicializar ordenamiento manual corregido
    inicializarOrdenamientoManual();
    
    console.log('‚úÖ Vista MATRIZADORES migrada al sistema universal - Funcionalidad completa');
  });

  // Funci√≥n de ordenamiento manual espec√≠fica para MATRIZADORES
  function inicializarOrdenamientoManual() {
    console.log('üîß Inicializando ordenamiento manual para MATRIZADORES');
    
    // Buscar todos los headers ordenables
    const headersOrdenables = document.querySelectorAll('.tabla-ordenable th.ordenable');
    
    headersOrdenables.forEach(header => {
      header.style.cursor = 'pointer';
      header.addEventListener('click', function() {
        const columna = this.getAttribute('data-columna');
        const tipoColumna = this.getAttribute('data-tipo') || 'texto';
        
        console.log('üìä Click en columna MATRIZADORES:', columna, tipoColumna);
        
        // Obtener direcci√≥n actual
        let direccion = 'asc';
        if (this.classList.contains('asc')) {
          direccion = 'desc';
        } else if (this.classList.contains('desc')) {
          direccion = 'asc';
        }
        
        // Limpiar otros headers
        headersOrdenables.forEach(h => {
          h.classList.remove('asc', 'desc', 'active');
          const icono = h.querySelector('.sort-icon');
          if (icono) {
            icono.className = 'fas fa-sort ms-1 sort-icon';
          }
        });
        
        // Marcar header actual
        this.classList.add(direccion, 'active');
        const icono = this.querySelector('.sort-icon');
        if (icono) {
          icono.className = `fas fa-sort-${direccion} ms-1 sort-icon`;
        }
        
        // Ejecutar ordenamiento por servidor
        const params = new URLSearchParams(window.location.search);
        params.set('ordenarPor', columna);
        params.set('ordenDireccion', direccion);
        
        window.location.search = params.toString();
      });
    });
    
    console.log('‚úÖ Ordenamiento manual configurado para MATRIZADORES:', headersOrdenables.length, 'columnas');
  }

  // Funci√≥n para marcar documento como visto
  function marcarComoVisto(documentoId) {
    fetch(`/matrizador/documentos/${documentoId}/marcar-visto`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'X-Requested-With': 'XMLHttpRequest'
      }
    })
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        // Remover badge "NUEVO" y clase documento-nuevo
        const fila = document.querySelector(`tr[data-id="${documentoId}"]`);
        if (fila) {
          fila.classList.remove('documento-nuevo');
          const badge = fila.querySelector('.badge-nuevo');
          if (badge) badge.remove();
          
          const botonVisto = fila.querySelector('button[onclick*="marcarComoVisto"]');
          if (botonVisto) botonVisto.remove();
        }
        console.log('‚úÖ Documento marcado como visto:', documentoId);
      }
    })
    .catch(error => {
      console.error('‚ùå Error marcando como visto:', error);
    });
  }

  // Funci√≥n para marcar documento como listo
  function marcarComoListo(documentoId) {
    if (confirm('¬øEst√° seguro de marcar este documento como listo para entrega?')) {
      fetch(`/matrizador/documentos/${documentoId}/marcar-listo`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-Requested-With': 'XMLHttpRequest'
        }
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          location.reload(); // Recargar para ver cambios de estado
        } else {
          alert('Error al marcar como listo: ' + data.message);
        }
      })
      .catch(error => {
        console.error('‚ùå Error marcando como listo:', error);
        alert('Error de conexi√≥n');
      });
    }
  }

  function limpiarFiltrosMatrizadores() {
    document.getElementById('busqueda').value = '';
    document.getElementById('estado').value = '';
    document.getElementById('estadoPago').value = '';
    document.getElementById('tipoDocumento').value = '';
    document.getElementById('fechaDesde').value = '';
    document.getElementById('fechaHasta').value = '';
    document.getElementById('filtrosFormMatrizadores').submit(); 
  }
</script> 