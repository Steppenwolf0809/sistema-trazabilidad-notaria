          {{! ============== L√ìGICA CONDICIONAL: CON O SIN C√ìDIGO DE VERIFICACI√ìN ============== }}
          {{#if documento.codigoVerificacion}}
            {{! Documento CON c√≥digo de verificaci√≥n - Interfaz tradicional }}
            <div class="alert alert-info">
              <div class="d-flex align-items-center">
                <i class="fas fa-info-circle fa-2x me-3"></i>
                <div>
                  <p class="mb-0">El cliente debe proporcionar el c√≥digo de verificaci√≥n de 4 d√≠gitos que recibi√≥ por tel√©fono o correo electr√≥nico.</p>
                </div>
              </div>
            </div>
          {{else}}
            {{! Documento SIN c√≥digo de verificaci√≥n - M√©todos alternativos }}
            <div class="alert alert-warning">
              <div class="d-flex align-items-center">
                <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                <div>
                  <h6 class="mb-1">Documento sin c√≥digo de verificaci√≥n</h6>
                  <p class="mb-0">Este documento no tiene c√≥digo de verificaci√≥n. Use uno de los m√©todos alternativos de verificaci√≥n.</p>
                </div>
              </div>
            </div>
          {{/if}}
          
          <div class="row mb-4">
            <div class="col-md-6">
              <div class="mb-3">
                <label class="form-label">Documento:</label>
                <div class="form-control bg-light">{{documento.tipoDocumento}}</div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <label class="form-label">C√≥digo de Barras:</label>
                <div class="form-control bg-light">{{documento.codigoBarras}}</div>
              </div>
            </div>
            <div class="col-md-12">
              <div class="mb-0">
                <label class="form-label">Cliente:</label>
                <div class="form-control bg-light">
                  {{documento.nombreCliente}} ({{documento.identificacionCliente}})
                </div>
              </div>
            </div>
          </div>

          {{! ============== NUEVA FUNCIONALIDAD: ALERTAS DE ENTREGA GRUPAL PARA MATRIZADORES ============== }}
          {{#if documentosGrupales}}
            {{#if (gt documentosGrupales.documentosPropiios.cantidad 0)}}
            <div class="alert alert-info border-left-info mb-4" id="alertaEntregaGrupalMatrizador">
              <div class="row align-items-center">
                <div class="col-md-8">
                  <h6 class="alert-heading mb-1">
                    <i class="fas fa-user-check text-info me-2"></i>
                    <strong>üë§ Sus Documentos Adicionales</strong>
                  </h6>
                  <p class="mb-2">
                    Puede agrupar <strong>{{documentosGrupales.documentosPropiios.cantidad}} documento(s) m√°s</strong> 
                    asignado(s) a usted para este cliente.
                  </p>
                  <small class="text-muted">
                    ‚úÖ Documentos validados de su asignaci√≥n | üîê Estado: Listo | üí∞ Pago: Completo
                  </small>
                </div>
                <div class="col-md-4 text-end">
                  <button type="button" class="btn btn-primary btn-sm me-1" onclick="mostrarEntregaGrupalMatrizador()">
                    <i class="fas fa-boxes me-1"></i> Agrupar Mis Documentos
                  </button>
                  <button type="button" class="btn btn-outline-secondary btn-sm" onclick="ocultarAlertaGrupalMatrizador()">
                    <i class="fas fa-file me-1"></i> Solo Este
                  </button>
                </div>
              </div>
              
              {{! Detalles de documentos propios }}
              <div class="mt-3" id="detallesDocumentosPropiios" style="display: none;">
                <h6><i class="fas fa-list me-2"></i>Sus documentos adicionales:</h6>
                <div class="table-responsive">
                  <table class="table table-sm table-bordered">
                    <thead class="table-light">
                      <tr>
                        <th>C√≥digo</th>
                        <th>Tipo</th>
                        <th>Valor</th>
                        <th>Estado Pago</th>
                      </tr>
                    </thead>
                    <tbody>
                      {{#each documentosGrupales.documentosPropiios.documentos}}
                      <tr>
                        <td><small>{{this.codigoBarras}}</small></td>
                        <td>{{this.tipoDocumento}}</td>
                        <td>${{#if this.valorFactura}}{{formatMoney this.valorFactura}}{{else}}0.00{{/if}}</td>
                        <td>
                          {{#if (eq this.estadoPago "pagado_completo")}}
                          <span class="badge bg-success">Completo</span>
                          {{else if (eq this.estadoPago "pagado_con_retencion")}}
                          <span class="badge bg-info">Con Retenci√≥n</span>
                          {{/if}}
                        </td>
                      </tr>
                      {{/each}}
                    </tbody>
                  </table>
                </div>
                <div class="alert alert-info alert-sm mt-2">
                  <i class="fas fa-info-circle me-1"></i>
                  <strong>Matrizador:</strong> Solo puede procesar documentos de su asignaci√≥n en entrega grupal.
                </div>
              </div>
            </div>
            {{/if}}
            
            {{#if (gt documentosGrupales.documentosOtros.cantidad 0)}}
            <div class="alert alert-warning border-left-warning mb-4">
              <div class="row align-items-center">
                <div class="col-md-8">
                  <h6 class="alert-heading mb-1">
                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                    <strong>‚ö†Ô∏è Documentos de Otros Matrizadores</strong>
                  </h6>
                  <p class="mb-2">
                    Este cliente tiene <strong>{{documentosGrupales.documentosOtros.cantidad}} documento(s) m√°s</strong> 
                    con otros matrizadores que tambi√©n est√°n listos para entrega.
                  </p>
                  <small class="text-muted">
                    üìã No puede procesarlos desde aqu√≠ | üè¢ Dirigir cliente a Recepci√≥n
                  </small>
                </div>
                <div class="col-md-4 text-end">
                  <button type="button" class="btn btn-outline-warning btn-sm" onclick="mostrarDocumentosOtros()">
                    <i class="fas fa-eye me-1"></i> Ver Detalles
                  </button>
                </div>
              </div>
              
              {{! Detalles de documentos de otros matrizadores }}
              <div class="mt-3" id="detallesDocumentosOtros" style="display: none;">
                <h6><i class="fas fa-users me-2"></i>Documentos de otros matrizadores:</h6>
                <div class="table-responsive">
                  <table class="table table-sm table-bordered">
                    <thead class="table-light">
                      <tr>
                        <th>C√≥digo</th>
                        <th>Tipo</th>
                        <th>Matrizador</th>
                        <th>Valor</th>
                      </tr>
                    </thead>
                    <tbody>
                      {{#each documentosGrupales.documentosOtros.documentos}}
                      <tr>
                        <td><small>{{this.codigoBarras}}</small></td>
                        <td>{{this.tipoDocumento}}</td>
                        <td><strong>{{this.matrizador.nombre}}</strong></td>
                        <td>${{#if this.valorFactura}}{{formatMoney this.valorFactura}}{{else}}0.00{{/if}}</td>
                      </tr>
                      {{/each}}
                    </tbody>
                  </table>
                </div>
                <div class="alert alert-warning alert-sm mt-2">
                  <i class="fas fa-info-circle me-1"></i>
                  <strong>Importante:</strong> Dirigir al cliente a <strong>Recepci√≥n</strong> para retirar estos documentos junto con el suyo.
                </div>
              </div>
            </div>
            {{/if}}
          {{/if}}
          
          <form id="formVerificacion" action="/matrizador/documentos/completar-entrega/{{documento.id}}" method="POST">
            {{#if documento.codigoVerificacion}}
              {{! ============== INTERFAZ PARA DOCUMENTOS CON C√ìDIGO ============== }}
              <!-- Secci√≥n de verificaci√≥n -->
              <div class="card bg-light mb-4">
                <div class="card-body">
                  <h6 class="card-title">Verificaci√≥n de C√≥digo</h6>
                  
                  <div class="form-group mb-3">
                    <label for="codigoVerificacion" class="form-label">C√≥digo de 4 d√≠gitos:</label>
                    <div class="input-group">
                      <input type="text" class="form-control form-control-lg text-center" id="codigoVerificacion" name="codigoVerificacion" 
                             maxlength="4" inputmode="numeric" pattern="[0-9]{4}" placeholder="0000" required
                             style="letter-spacing: 0.5em; font-weight: bold;">
                      <button class="btn btn-primary" type="submit">
                        <i class="fas fa-check-circle me-1"></i> Verificar
                      </button>
                    </div>
                    {{#if error}}
                    <div class="text-danger mt-2">
                      <i class="fas fa-exclamation-circle me-1"></i> {{error}}
                    </div>
                    {{/if}}
                  </div>
                  
                  <div class="text-center mt-2">
                    <button type="button" class="btn btn-link" data-bs-toggle="modal" data-bs-target="#verificacionLlamadaModal">
                      <i class="fas fa-phone me-1"></i> El cliente no recuerda el c√≥digo
                    </button>
                  </div>
                </div>
              </div>
            {{else}}
              {{! ============== INTERFAZ PARA DOCUMENTOS SIN C√ìDIGO ============== }}
              <!-- Secci√≥n de verificaci√≥n alternativa -->
              <div class="card bg-warning bg-opacity-10 mb-4">
                <div class="card-body">
                  <h6 class="card-title">
                    <i class="fas fa-shield-alt me-2"></i>M√©todos de Verificaci√≥n Alternativos
                  </h6>
                  
                  <div class="form-group mb-3">
                    <label class="form-label">Seleccione el m√©todo de verificaci√≥n:</label>
                    <div class="row">
                      <div class="col-md-4 mb-2">
                        <div class="form-check">
                          <input class="form-check-input" type="radio" name="tipoVerificacion" id="verificacionIdentidad" value="identidad" required>
                          <label class="form-check-label" for="verificacionIdentidad">
                            <i class="fas fa-id-card me-1"></i> C√©dula de Identidad
                          </label>
                        </div>
                      </div>
                      <div class="col-md-4 mb-2">
                        <div class="form-check">
                          <input class="form-check-input" type="radio" name="tipoVerificacion" id="verificacionFactura" value="factura" required>
                          <label class="form-check-label" for="verificacionFactura">
                            <i class="fas fa-receipt me-1"></i> N√∫mero de Factura
                          </label>
                        </div>
                      </div>
                      <div class="col-md-4 mb-2">
                        <div class="form-check">
                          <input class="form-check-input" type="radio" name="tipoVerificacion" id="verificacionLlamada" value="llamada" required>
                          <label class="form-check-label" for="verificacionLlamada">
                            <i class="fas fa-phone me-1"></i> Llamada Telef√≥nica
                          </label>
                        </div>
                      </div>
                    </div>
                  </div>
                  
                  <div class="form-group mb-3">
                    <label for="observaciones" class="form-label">Detalles de la verificaci√≥n:</label>
                    <textarea class="form-control" id="observaciones" name="observaciones" rows="3" 
                              placeholder="Describa los detalles del m√©todo de verificaci√≥n utilizado..." required></textarea>
                    <div class="form-text">
                      <strong>Ejemplos:</strong><br>
                      ‚Ä¢ <em>C√©dula:</em> "Verificada c√©dula 1234567890 coincide con cliente"<br>
                      ‚Ä¢ <em>Factura:</em> "Verificado n√∫mero de factura 001-001-000123456"<br>
                      ‚Ä¢ <em>Llamada:</em> "Llam√© al 0987654321, confirm√≥ datos personales y tr√°mite"
                    </div>
                  </div>
                  
                  {{#if error}}
                  <div class="alert alert-danger">
                    <i class="fas fa-exclamation-circle me-1"></i> {{error}}
                  </div>
                  {{/if}}
                </div>
              </div>
            {{/if}}
            
            <!-- Secci√≥n de datos del receptor -->
            <div class="card mb-4">
              <div class="card-body">
                <h6 class="card-title">Datos de quien recibe</h6>
                
                <div class="row">
                  <div class="col-md-6 mb-3">
                    <label for="nombreReceptor" class="form-label">Nombre completo:</label>
                    <input type="text" class="form-control" id="nombreReceptor" name="nombreReceptor" required>
                  </div>
                  
                  <div class="col-md-6 mb-3">
                    <label for="identificacionReceptor" class="form-label">Identificaci√≥n:</label>
                    <input type="text" class="form-control" id="identificacionReceptor" name="identificacionReceptor" required>
                  </div>
                  
                  <div class="col-md-12 mb-0">
                    <label for="relacionReceptor" class="form-label">Relaci√≥n con el cliente:</label>
                    <select class="form-select" id="relacionReceptor" name="relacionReceptor" required>
                      <option value="" selected disabled>Seleccionar...</option>
                      <option value="titular">Titular del documento</option>
                      <option value="familiar">Familiar</option>
                      <option value="mandatario">Mandatario</option>
                      <option value="otro">Otro</option>
                    </select>
                  </div>
                </div>
              </div>
            </div>
            
            {{! ============== CAMPOS OCULTOS PARA ENTREGA GRUPAL ============== }}
            <input type="hidden" id="entregaGrupal" name="entregaGrupal" value="false">
            <input type="hidden" id="documentosAdicionales" name="documentosAdicionales" value="">
            <input type="hidden" id="tipoEntregaGrupal" name="tipoEntregaGrupal" value="{{tipoEntrega}}">
            
            <div class="d-grid">
              <button type="submit" class="btn btn-primary btn-lg" id="btnCompletarEntrega">
                <i class="fas fa-paper-plane me-1"></i> Completar Entrega
              </button>
            </div>
          </form>
        {{else}}
          <!-- Modo: B√∫squeda de documento para entrega -->
          <h5 class="mb-4">Buscar Documento para Entrega</h5>
          
          <div class="alert alert-info mb-4">
            <div class="d-flex align-items-center">
              <i class="fas fa-info-circle fa-2x me-3"></i>
              <div>
                <p class="mb-0">Ingrese el c√≥digo de barras o busque un documento listo para entrega.</p>
              </div>
            </div>
          </div>
          
          <form action="/matrizador/documentos/entrega" method="GET">
            <div class="input-group mb-4">
              <input type="text" class="form-control" name="codigo" placeholder="Escanear o ingresar c√≥digo de barras">
              <button class="btn btn-primary" type="submit">
                <i class="fas fa-search me-1"></i> Buscar
              </button>
            </div>
          </form>
          
          <h6 class="mb-3 border-bottom pb-2">Mis Documentos Listos para Entrega</h6>
          
          <div class="list-group">
            {{#each documentosListos}}
            <a href="/matrizador/documentos/entrega/{{this.id}}" class="list-group-item list-group-item-action">
              <div class="d-flex w-100 justify-content-between">
                <h6 class="mb-1">{{this.tipoDocumento}}</h6>
                <small class="fecha-documento-entrega" data-fecha="{{this.updatedAt}}">
                  Cargando...
                </small>
              </div>
              <p class="mb-1">{{this.nombreCliente}}</p>
              <small>C√≥digo: {{this.codigoBarras}}</small>
            </a>
            {{else}}
            <div class="text-center py-4">
              <i class="fas fa-info-circle me-2"></i> No hay documentos listos para entrega
            </div>
            {{/each}}
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</div>

{{! ============== MODAL DE CONFIRMACI√ìN ENTREGA GRUPAL MATRIZADORES ============== }}
{{#if (and documentosGrupales.documentosPropiios (gt documentosGrupales.documentosPropiios.cantidad 0))}}
