<!--
  Componente Universal para el Historial de Notificaciones
  - Usado por: Admin, Recepci√≥n, Archivo, Matrizador
  - Contiene: Filtros, Estad√≠sticas y Tabla de Notificaciones
-->

<div class="container-fluid">
    <!-- Breadcrumb -->
    <div class="row mb-3">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/matrizador">
                            <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        <i class="fas fa-bell me-1"></i>Control de Notificaciones
                    </li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>üëÅÔ∏è Control de Notificaciones</h2>
            <p class="text-muted mb-0">Un historial centralizado de todas las comunicaciones enviadas.</p>
        </div>
        {{#if stats.total}}
            <span class="badge bg-info fs-6">{{stats.total}} notificaciones</span>
        {{/if}}
    </div>
    
    <!-- Filtros Universales -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">üîç Filtros de Control</h5>
        </div>
        <div class="card-body">
            <form method="GET" action="/matrizador/notificaciones/historial" id="filtros-notificaciones-form">
                <div class="row mb-3">
                    <div class="col-md-2">
                        <label class="form-label">üìÖ Desde:</label>
                        <input type="date" class="form-control" name="fechaDesde" value="{{filtros.fechaDesde}}">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">üìÖ Hasta:</label>
                        <input type="date" class="form-control" name="fechaHasta" value="{{filtros.fechaHasta}}">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">üì± Tipo:</label>
                        <select class="form-select" name="tipo">
                            <option value="">Todos</option>
                            <option value="documento_listo" {{#if (eq filtros.tipo 'documento_listo')}}selected{{/if}}>üìã Listo para Retiro</option>
                            <option value="entrega_confirmada" {{#if (eq filtros.tipo 'entrega_confirmada')}}selected{{/if}}>‚úÖ Entregado</option>
                            <option value="entrega_grupal" {{#if (eq filtros.tipo 'entrega_grupal')}}selected{{/if}}>üì¶ Entrega Grupal</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">üìß Canal:</label>
                        <select class="form-select" name="canal">
                            <option value="">Todos</option>
                            <option value="whatsapp" {{#if (eq filtros.canal 'whatsapp')}}selected{{/if}}>WhatsApp</option>
                            <option value="email" {{#if (eq filtros.canal 'email')}}selected{{/if}}>Email</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">‚úÖ Estado:</label>
                        <select class="form-select" name="estado">
                            <option value="">Todos</option>
                            <option value="enviado" {{#if (eq filtros.estado 'enviado')}}selected{{/if}}>Enviado</option>
                            <option value="error" {{#if (eq filtros.estado 'error')}}selected{{/if}}>Error</option>
                            <option value="pendiente" {{#if (eq filtros.estado 'pendiente')}}selected{{/if}}>Pendiente</option>
                        </select>
                    </div>
                    {{#if (or (eq @root.userRole "admin") (eq @root.userRole "recepcion"))}}
                    <div class="col-md-2">
                        <label class="form-label">üë®‚Äçüíº Matrizador:</label>
                        <select class="form-select" name="matrizadorId">
                            <option value="">Todos</option>
                            {{#each matrizadores}}
                            <option value="{{this.id}}" {{#if (eq ../filtros.matrizadorId (toString this.id))}}selected{{/if}}>
                                {{this.nombre}}
                            </option>
                            {{/each}}
                        </select>
                    </div>
                    {{/if}}
                </div>
                <div class="row">
                    <div class="col-md-8">
                        <label class="form-label">üîç B√∫squeda R√°pida:</label>
                        <input type="text" class="form-control" name="busqueda" 
                               value="{{filtros.busqueda}}" placeholder="C√≥digo de documento, nombre de cliente, N¬∞ factura o destinatario">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">&nbsp;</label>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary flex-fill">üîç Buscar</button>
                            <a href="/matrizador/notificaciones/historial" class="btn btn-outline-secondary flex-fill">
                                üîÑ Limpiar
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Estad√≠sticas R√°pidas -->
    {{#if stats}}
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h3>{{stats.total}}</h3>
                    <p class="mb-0">üìä Total</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h3>{{stats.enviadas}}</h3>
                    <p class="mb-0">‚úÖ Enviadas</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body text-center">
                    <h3>{{stats.fallidas}}</h3>
                    <p class="mb-0">‚ùå Fallidas</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body text-center">
                    <h3>{{stats.pendientes}}</h3>
                    <p class="mb-0">‚è≥ Pendientes</p>
                </div>
            </div>
        </div>
    </div>
    {{/if}}

    <!-- Tabla Universal de Notificaciones -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">üìã Historial Completo de Notificaciones</h5>
        </div>
        <div class="card-body p-0">
          {{#if notificaciones.length}}
            <div class="table-responsive">
                <table class="table table-striped table-hover notificaciones-universal">
                    <thead class="table-dark">
                        <tr>
                            <th width="15%">üìÖ Fecha/Hora</th>
                            <th width="25%">üìÑ Documento</th>
                            <th width="30%">üë§ Cliente</th>
                            <th width="15%">üì± Enviado a</th>
                            <th width="10%">‚úÖ Estado</th>
                            <th width="5%">üëÅÔ∏è</th>
                        </tr>
                    </thead>
                    <tbody>
                                                {{#each notificaciones}}
                        <tr>
                            <td>
                                <div class="d-flex flex-column">
                                    <small class="fw-bold">{{formatFechaCorta this.created_at}}</small>
                                    <small class="text-muted">{{formatTime this.created_at}}</small>
                                </div>
                            </td>
                            <td>
                                {{#if (esEntregaGrupal this.tipoEvento)}}
                                    <div class="d-flex flex-column">
                                        <strong class="text-success">üì¶ ENTREGA GRUPAL</strong>
                                        <small class="text-info">{{this.metadatos.totalDocumentos}} documentos</small>
                                    </div>
                                {{else}}
                                    <div class="d-flex flex-column">
                                        <strong>
                                            <a href="/matrizador/documentos/detalle/{{this.documento.id}}" class="text-decoration-none">
                                                {{formatearCodigoCompacto this.documento.codigoBarras}}
                                            </a>
                                        </strong>
                                        <small class="text-muted">
                                            <i class="{{iconoTipoDocumento this.documento.tipoDocumento}} me-1"></i>
                                            {{this.documento.tipoDocumento}}
                                        </small>
                                    </div>
                                {{/if}}
                            </td>
                            <td>
                                <div class="d-flex flex-column">
                                    {{#if (esEntregaGrupal this.tipoEvento)}}
                                        <strong>{{this.metadatos.nombreCliente}}</strong>
                                    {{else}}
                                        <strong>{{this.documento.nombreCliente}}</strong>
                                        {{#if this.documento.identificacionCliente}}
                                        <small class="text-muted">{{this.documento.identificacionCliente}}</small>
                                        {{/if}}
                                    {{/if}}
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="fab fa-whatsapp text-success me-2"></i>
                                    <small>{{destinatarioCensurado this.destinatario}}</small>
                                </div>
                            </td>
                            <td>
                                <span class="badge {{estadoBadgeClass this.estado}}">
                                    {{estadoTexto this.estado}}
                                </span>
                            </td>
                            <td class="text-center">
                                <button class="btn btn-sm btn-outline-primary" onclick="verDetalleNotificacion({{this.id}})" title="Ver detalle">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>

            <!-- Informaci√≥n de resultados -->
            {{#if notificaciones.length}}
            <div class="d-flex justify-content-between align-items-center mt-3 p-3">
                <small class="text-muted">
                    Mostrando {{notificaciones.length}} de {{stats.total}} notificaciones (l√≠mite de 100)
                </small>
            </div>
            {{/if}}
            {{else}}
                <div class="alert alert-info text-center" role="alert">
                    <i class="fas fa-info-circle me-2"></i>
                    No se encontraron notificaciones con los filtros aplicados.
                </div>
            {{/if}}
        </div>
    </div>
</div>

<!-- Modal Elegante para Detalles de Notificaci√≥n -->
<div class="modal fade" id="detalleNotificacionModal" tabindex="-1" aria-labelledby="detalleNotificacionModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <!-- Contenido se cargar√° din√°micamente aqu√≠ -->
    </div>
  </div>
</div>


<script>
    function verDetalleNotificacion(notificacionId) {
        console.log(`üîç Cargando detalle de notificaci√≥n ID: ${notificacionId}`);
        
        const modal = document.getElementById('detalleNotificacionModal');
        const modalContent = modal.querySelector('.modal-content');
        
        modalContent.innerHTML = `
            <div class="modal-body text-center py-5">
                <div class="spinner-border text-primary mb-3" role="status">
                    <span class="visually-hidden">Cargando...</span>
                </div>
                <h5 class="text-muted">Cargando detalles...</h5>
                <p class="text-muted small">Obteniendo informaci√≥n de la notificaci√≥n</p>
            </div>
        `;
        
        const modalInstance = new bootstrap.Modal(modal);
        modalInstance.show();
        
        fetch(`/matrizador/notificaciones/detalle/${notificacionId}`, {
            headers: { 'Accept': 'text/html' }
        })
        .then(response => {
            if (!response.ok) throw new Error(`HTTP ${response.status}: ${response.statusText}`);
            return response.text();
        })
        .then(html => {
            modalContent.innerHTML = html;
            console.log('‚úÖ Detalle de notificaci√≥n cargado exitosamente');
        })
        .catch(error => {
            console.error('‚ùå Error al cargar detalle:', error);
            modalContent.innerHTML = `
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-exclamation-triangle me-2"></i>Error al cargar
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-center py-5">
                    <i class="fas fa-exclamation-triangle fa-3x text-danger mb-3"></i>
                    <h5 class="text-danger">No se pudo cargar el detalle</h5>
                    <p class="text-muted">${error.message}</p>
                    <button class="btn btn-primary" onclick="verDetalleNotificacion(${notificacionId})">
                        <i class="fas fa-redo me-1"></i>Reintentar
                    </button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            `;
        });
    }

    function reenviarNotificacion(notificacionId) {
        if (!confirm('¬øEst√° seguro de que desea reenviar esta notificaci√≥n?')) return;
        
        fetch(`/matrizador/notificaciones/${notificacionId}/reenviar`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' }
        })
        .then(response => response.json())
        .then(data => {
            if (data.exito) {
                alert('‚úÖ Notificaci√≥n reenviada exitosamente');
                location.reload();
            } else {
                alert(`‚ùå Error al reenviar: ${data.mensaje}`);
            }
        })
        .catch(error => {
            console.error('Error al reenviar:', error);
            alert('‚ùå Error al reenviar la notificaci√≥n');
        });
    }

    document.addEventListener('DOMContentLoaded', function() {
        console.log('üìã Tabla optimizada de notificaciones inicializada');
        
        const tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'));
        tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    });
</script>
