{{! Entrega de Documento - Recepci√≥n }}
{{! layout: 'recepcion' }}
<div class="container mt-4">
  <h2>Entrega de Documentos</h2>
  
  {{#if error}}
  <div class="alert alert-danger">
    <i class="fas fa-exclamation-triangle me-2"></i> {{error}}
  </div>
  {{/if}}
  
  {{#if success}}
  <div class="alert alert-success">
    <i class="fas fa-check-circle me-2"></i> {{success}}
  </div>
  {{/if}}

  {{! ============== NUEVA FUNCIONALIDAD: ALERTA DE ENTREGA GRUPAL ============== }}
  {{#if (and documento documentosGrupales.tieneDocumentosSegurosPtraEntrega (eq tipoEntrega "recepcion_completa"))}}
  <div class="alert alert-info border-left-info mb-4" id="alertaEntregaGrupal">
    <div class="row align-items-center">
      <div class="col-md-8">
        <h6 class="alert-heading mb-1">
          <i class="fas fa-boxes text-info me-2"></i>
          <strong>üè¢ Documentos Adicionales Detectados - Recepci√≥n</strong>
        </h6>
        <p class="mb-2">
          Este cliente tiene <strong>{{documentosGrupales.cantidad}} documento(s) m√°s</strong> 
          listo(s) para entrega.
        </p>
        
        {{#if (gt documentosGrupales.documentosPagados.length 0)}}
        <div class="alert alert-success alert-sm mb-1">
          <i class="fas fa-check-circle me-1"></i>
          <strong>{{documentosGrupales.documentosPagados.length}} documento(s) pagado(s)</strong> - Listo(s) para entrega
        </div>
        {{/if}}
        
        {{#if (gt documentosGrupales.documentosPendientes.length 0)}}
        <div class="alert alert-warning alert-sm mb-1">
          <i class="fas fa-exclamation-triangle me-1"></i>
          <strong>{{documentosGrupales.documentosPendientes.length}} documento(s) pendiente(s) de pago</strong>
          <br>
          <small>‚ö†Ô∏è <strong>Consultar con matrizador</strong> antes de proceder con entrega</small>
        </div>
        {{/if}}
        
        <small class="text-muted">
          üîê Estado: Listo para entrega | üìã Sin entregas previas
        </small>
      </div>
      <div class="col-md-4 text-end">
        <button type="button" class="btn btn-primary btn-sm me-1" onclick="mostrarEntregaGrupalRecepcion()">
          <i class="fas fa-boxes me-1"></i> Ver Todos los Documentos
        </button>
        <button type="button" class="btn btn-outline-secondary btn-sm" onclick="ocultarAlertaGrupal()">
          <i class="fas fa-file me-1"></i> Solo Este
        </button>
      </div>
    </div>
    
    {{! Detalles de documentos adicionales }}
    <div class="mt-3" id="detallesDocumentosGrupales" style="display: none;">
      <h6><i class="fas fa-list me-2"></i>Documentos adicionales a entregar:</h6>
      <div class="table-responsive">
        <table class="table table-sm table-bordered">
          <thead class="table-light">
            <tr>
              <th>C√≥digo</th>
              <th>Tipo</th>
              <th>Matrizador</th>
              <th>Valor</th>
              <th>Estado Pago</th>
            </tr>
          </thead>
          <tbody>
            {{#each documentosGrupales.documentos}}
            <tr class="{{#unless (or (eq this.estadoPago 'pagado_completo') (eq this.estadoPago 'pagado_con_retencion'))}}table-warning{{/unless}}">
              <td><small>{{this.codigoBarras}}</small></td>
              <td>{{this.tipoDocumento}}</td>
              <td>{{#if this.matrizador}}{{this.matrizador.nombre}}{{else}}<span class="text-muted">No asignado</span>{{/if}}</td>
              <td>${{#if this.valorFactura}}{{formatMoney this.valorFactura}}{{else}}0.00{{/if}}</td>
              <td>
                {{#if (eq this.estadoPago "pagado_completo")}}
                <span class="badge bg-success">Completo</span>
                {{else if (eq this.estadoPago "pagado_con_retencion")}}
                <span class="badge bg-info">Con Retenci√≥n</span>
                {{else if (eq this.estadoPago "pago_parcial")}}
                <span class="badge bg-warning text-dark">Parcial</span>
                {{else}}
                <span class="badge bg-danger">Pendiente</span>
                {{/if}}
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
      <div class="alert alert-info alert-sm mt-2">
        <i class="fas fa-info-circle me-1"></i>
        <strong>Recepci√≥n:</strong> Puede procesar entrega grupal de documentos de cualquier matrizador sin restricciones.
      </div>
    </div>
  </div>
  {{/if}}
  
  {{#if documento}}
  <!-- Formulario de entrega para un documento espec√≠fico -->
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <span><i class="fas fa-hand-holding me-2"></i> Entrega de Documento</span>
          <a href="/recepcion/documentos" class="btn btn-sm btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Volver al listado
          </a>
        </div>
        <div class="card-body">
          <div class="row mb-4">
            <div class="col-md-6">
              <div class="card bg-light mb-2">
                <div class="card-body p-3">
                  <h5 class="card-title">{{documento.tipoDocumento}}</h5>
                  <h6 class="card-subtitle mb-2 text-muted">C√≥digo: {{documento.codigoBarras}}</h6>
                  <hr>
                  <p class="card-text">
                    <strong>Cliente:</strong> {{documento.nombreCliente}}<br>
                    <strong>Identificaci√≥n:</strong> {{documento.identificacionCliente}}<br>
                    {{#if documento.matrizador}}
                    <strong>Matrizador:</strong> {{documento.matrizador.nombre}}<br>
                    {{/if}}
                    {{#if documento.valorFactura}}
                    <strong>Valor:</strong> ${{formatMoney documento.valorFactura}}<br>
                    {{/if}}
                    {{#if documento.numeroFactura}}
                    <strong>N¬∞ Factura:</strong> {{documento.numeroFactura}}
                    {{/if}}
                  </p>
                </div>
              </div>
            </div>
            <div class="col-md-6 d-flex flex-column justify-content-center">
              <!-- Estado de Pago -->
              {{#if (eq documento.estadoPago "pagado_completo")}}
              <div class="alert alert-success">
                <i class="fas fa-check-circle me-2"></i>
                <strong>‚úÖ Documento pagado</strong><br>
                <small>Proceder con entrega normal</small>
              </div>
              {{else if (eq documento.estadoPago "pagado_con_retencion")}}
              <div class="alert alert-success">
                <i class="fas fa-check-circle me-2"></i>
                <strong>‚úÖ Pagado con Retenci√≥n</strong><br>
                <small>Documento completamente pagado. Proceder con entrega normal.</small>
              </div>
              {{else if (eq documento.estadoPago "pago_parcial")}}
              <div class="alert alert-warning text-dark">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Pago Parcial</strong><br>
                <small>
                  {{#if documento.matrizador}}
                  Consultar con matrizador <strong>{{documento.matrizador.nombre}}</strong>
                  {{else}}
                  Consultar con el matrizador asignado
                  {{/if}}
                </small>
              </div>
              {{else}}
              <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>‚ö†Ô∏è Pago pendiente</strong><br>
                <small>
                  {{#if documento.matrizador}}
                  Consultar con matrizador <strong>{{documento.matrizador.nombre}}</strong>
                  {{else}}
                  Consultar con el matrizador asignado
                  {{/if}}
                </small>
              </div>
              {{/if}}
              
              <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i> Este documento est√° listo para ser entregado al cliente.
              </div>
              <p>
                <small class="text-muted">El cliente debe proporcionar el c√≥digo de verificaci√≥n para la entrega.</small>
              </p>
            </div>
          </div>
          
          <form action="/recepcion/documentos/entrega/{{documento.id}}" method="POST">
            <div class="card mb-4">
              <div class="card-header">
                <i class="fas fa-user-check me-2"></i> Informaci√≥n del Receptor
              </div>
              <div class="card-body">
                <div class="row">
                  <div class="col-md-6 mb-3">
                    <label for="nombreReceptor" class="form-label">Nombre completo*</label>
                    <input type="text" class="form-control" id="nombreReceptor" name="nombreReceptor" required>
                  </div>
                  <div class="col-md-6 mb-3">
                    <label for="identificacionReceptor" class="form-label">Identificaci√≥n*</label>
                    <input type="text" class="form-control" id="identificacionReceptor" name="identificacionReceptor" required>
                  </div>
                </div>
                <div class="mb-3">
                  <label for="relacionReceptor" class="form-label">Relaci√≥n con el cliente*</label>
                  <select class="form-select" id="relacionReceptor" name="relacionReceptor" required>
                    <option value="" selected disabled>Seleccione una opci√≥n</option>
                    <option value="titular">Es el titular</option>
                    <option value="familiar">Familiar</option>
                    <option value="mandatario">Mandatario</option>
                    <option value="otro">Otro</option>
                  </select>
                </div>
              </div>
            </div>
            
            <div class="card mb-4">
              <div class="card-header">
                <i class="fas fa-lock me-2"></i> Verificaci√≥n
              </div>
              <div class="card-body">
                {{#if documento.codigoVerificacion}}
                <!-- Documento CON c√≥digo de verificaci√≥n -->
                <div class="alert alert-info mb-3">
                  <i class="fas fa-info-circle me-2"></i>
                  <strong>Documento con c√≥digo de verificaci√≥n</strong><br>
                  <small>El cliente debe proporcionar el c√≥digo de 4 d√≠gitos que recibi√≥ por notificaci√≥n.</small>
                </div>
                
                <div class="mb-3">
                  <label class="form-label d-block">M√©todo de verificaci√≥n*</label>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="tipoVerificacion" id="verificacionCodigo" value="codigo" checked>
                    <label class="form-check-label" for="verificacionCodigo">C√≥digo de verificaci√≥n</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="tipoVerificacion" id="verificacionLlamada" value="llamada">
                    <label class="form-check-label" for="verificacionLlamada">Verificaci√≥n por llamada</label>
                  </div>
                </div>
                
                <div id="divCodigoVerificacion" class="mb-3">
                  <label for="codigoVerificacion" class="form-label">C√≥digo de verificaci√≥n (4 d√≠gitos)*</label>
                  <input type="text" class="form-control" id="codigoVerificacion" name="codigoVerificacion" maxlength="4" pattern="[0-9]{4}">
                  <div class="form-text">El c√≥digo fue enviado al cliente por WhatsApp/correo electr√≥nico.</div>
                </div>
                
                <div id="divObservaciones" class="mb-3 d-none">
                  <label for="observaciones" class="form-label">Observaciones de la verificaci√≥n por llamada*</label>
                  <textarea class="form-control" id="observaciones" name="observaciones" rows="3"></textarea>
                  <div class="form-text">Detalle la informaci√≥n de la llamada: hora, qui√©n atendi√≥, n√∫mero al que se llam√≥, etc.</div>
                </div>
                {{else}}
                <!-- Documento SIN c√≥digo de verificaci√≥n -->
                <div class="alert alert-warning mb-3">
                  <i class="fas fa-exclamation-triangle me-2"></i>
                  <strong>Documento sin c√≥digo de verificaci√≥n</strong><br>
                  <small>Este documento fue configurado para no enviar notificaciones autom√°ticas o es de entrega inmediata.</small>
                </div>
                
                <div class="card bg-light mb-3">
                  <div class="card-body">
                    <h6 class="card-title"><i class="fas fa-shield-alt me-2"></i>M√©todos de verificaci√≥n alternativos:</h6>
                    <ul class="mb-0">
                      <li><strong>C√©dula de identidad:</strong> Verificar que coincida con los datos del documento</li>
                      <li><strong>N√∫mero de factura:</strong> {{#if documento.numeroFactura}}{{documento.numeroFactura}}{{else}}Solicitar al cliente{{/if}}</li>
                      <li><strong>Datos del cliente:</strong> Nombre completo y n√∫mero de identificaci√≥n</li>
                      <li><strong>Llamada de confirmaci√≥n:</strong> Contactar al cliente para verificar la entrega</li>
                    </ul>
                  </div>
                </div>
                
                <div class="mb-3">
                  <label class="form-label d-block">M√©todo de verificaci√≥n utilizado*</label>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="tipoVerificacion" id="verificacionIdentidad" value="identidad" checked>
                    <label class="form-check-label" for="verificacionIdentidad">
                      <strong>Verificaci√≥n por c√©dula de identidad</strong><br>
                      <small class="text-muted">El receptor presenta c√©dula que coincide con los datos del documento</small>
                    </label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="tipoVerificacion" id="verificacionFactura" value="factura">
                    <label class="form-check-label" for="verificacionFactura">
                      <strong>Verificaci√≥n por n√∫mero de factura</strong><br>
                      <small class="text-muted">El cliente proporciona el n√∫mero de factura correcto</small>
                    </label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="tipoVerificacion" id="verificacionLlamadaAlt" value="llamada">
                    <label class="form-check-label" for="verificacionLlamadaAlt">
                      <strong>Verificaci√≥n por llamada telef√≥nica</strong><br>
                      <small class="text-muted">Llamar al cliente para confirmar la entrega</small>
                    </label>
                  </div>
                </div>
                
                <div id="divObservacionesAlt" class="mb-3 d-none">
                  <label for="observacionesAlt" class="form-label">Detalles de la verificaci√≥n*</label>
                  <textarea class="form-control" id="observacionesAlt" name="observaciones" rows="3" placeholder="Ejemplo: Cliente present√≥ c√©dula 1234567890 que coincide con los datos del documento..."></textarea>
                  <div class="form-text">Describa el m√©todo de verificaci√≥n utilizado y los detalles relevantes.</div>
                </div>
                
                <!-- Campo oculto para indicar que no hay c√≥digo -->
                <input type="hidden" name="codigoVerificacion" value="sin_codigo">
                {{/if}}
              </div>
            </div>
            
            {{! ============== CAMPOS OCULTOS PARA ENTREGA GRUPAL ============== }}
            <input type="hidden" id="entregaGrupal" name="entregaGrupal" value="false">
            <input type="hidden" id="documentosAdicionales" name="documentosAdicionales" value="">
            <input type="hidden" id="tipoEntregaGrupal" name="tipoEntregaGrupal" value="{{tipoEntrega}}">
            
            <div class="d-grid">
              <button type="submit" class="btn btn-primary" id="btnConfirmarEntrega">
                <i class="fas fa-check-circle me-2"></i> Confirmar Entrega
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  {{else}}
  <!-- B√∫squeda y filtrado de documentos listos para entrega -->
  <div class="row mb-4">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          <i class="fas fa-search me-2"></i> Buscar y filtrar documentos para entregar
        </div>
        <div class="card-body">
          <form action="/recepcion/documentos/entrega" method="GET" class="row g-3">
            <div class="col-md-3">
              <label for="codigo" class="form-label">C√≥digo de barras</label>
              <input type="text" class="form-control" id="codigo" name="codigo" placeholder="C√≥digo del documento" value="{{filtros.codigo}}">
            </div>
            <div class="col-md-3">
              <label for="nombre" class="form-label">Nombre cliente</label>
              <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Nombre del cliente" value="{{filtros.nombre}}">
            </div>
            <div class="col-md-3">
              <label for="identificacion" class="form-label">Identificaci√≥n</label>
              <input type="text" class="form-control" id="identificacion" name="identificacion" placeholder="N√∫mero de documento" value="{{filtros.identificacion}}">
            </div>
            <div class="col-md-3">
              <label for="fechaDesde" class="form-label">Fecha desde</label>
              <input type="date" class="form-control" id="fechaDesde" name="fechaDesde" value="{{filtros.fechaDesde}}">
            </div>
            <div class="col-md-3">
              <label for="fechaHasta" class="form-label">Fecha hasta</label>
              <input type="date" class="form-control" id="fechaHasta" name="fechaHasta" value="{{filtros.fechaHasta}}">
            </div>
            <div class="col-md-3">
              <label for="matrizador" class="form-label">Matrizador</label>
              <input type="text" class="form-control" id="matrizador" name="matrizador" placeholder="Nombre del matrizador" value="{{filtros.matrizador}}">
            </div>
            <div class="col-md-6 d-flex align-items-end">
              <button class="btn btn-primary me-2" type="submit">
                <i class="fas fa-search me-1"></i> Buscar
              </button>
              <a href="/recepcion/documentos/entrega" class="btn btn-outline-secondary">
                <i class="fas fa-times me-1"></i> Limpiar filtros
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  
  {{#if documentosListos}}
  <h4 class="mb-3">Documentos Listos para Entrega</h4>
  <div class="table-responsive">
    <table class="table table-hover table-striped">
      <thead class="table-light">
        <tr>
          <th>C√≥digo</th>
          <th>Tipo</th>
          <th>Cliente</th>
          <th>Matrizador</th>
          <th>Fecha</th>
          <th>Estado Pago</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        {{#each documentosListos}}
        <tr>
          <td><span class="small">{{this.codigoBarras}}</span></td>
          <td>{{this.tipoDocumento}}</td>
          <td>
            {{this.nombreCliente}}
            <div class="small text-muted">{{this.identificacionCliente}}</div>
          </td>
          <td>
            {{#if this.matrizador}}
            {{this.matrizador.nombre}}
            {{else}}
            <span class="text-muted">No asignado</span>
            {{/if}}
          </td>
          <td>{{formatDate this.fechaFactura}}</td>
          <td>
            {{#if (eq this.estadoPago "pagado_completo")}}
            <span class="badge bg-success">Pagado Completo</span>
            {{else if (eq this.estadoPago "pagado_con_retencion")}}
            <span class="badge bg-info">Pagado con Retenci√≥n</span>
            {{else if (eq this.estadoPago "pago_parcial")}}
            <span class="badge bg-warning text-dark">Pago Parcial</span>
            {{else}}
            <span class="badge bg-danger">Pendiente</span>
            {{/if}}
          </td>
          <td>
            <a href="/recepcion/documentos/entrega/{{this.id}}" class="btn btn-sm btn-primary">
              <i class="fas fa-handshake me-1"></i> Entregar
            </a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  {{else}}
  <div class="alert alert-info mt-4">
    <i class="fas fa-info-circle me-2"></i> No hay documentos listos para entrega en este momento.
  </div>
  {{/if}}
  {{/if}}
</div>

{{! ============== MODAL DE CONFIRMACI√ìN ENTREGA GRUPAL ============== }}
{{#if (and documento documentosGrupales.tieneDocumentosSegurosPtraEntrega (eq tipoEntrega "recepcion_completa"))}}
<div class="modal fade" id="modalEntregaGrupalRecepcion" tabindex="-1" aria-labelledby="modalEntregaGrupalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header bg-success text-white">
        <h5 class="modal-title" id="modalEntregaGrupalLabel">
          <i class="fas fa-boxes me-2"></i>Confirmar Entrega Grupal - Recepci√≥n
        </h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="alert alert-info">
          <h6><i class="fas fa-shield-check me-2"></i>Validaciones de Seguridad Completadas</h6>
          <ul class="mb-0">
            <li>‚úÖ Todos los documentos est√°n en estado "Listo para entrega"</li>
            <li>‚úÖ Sin entregas previas registradas</li>
            <li>‚úÖ Pertenecen al mismo cliente</li>
            <li>‚úÖ Sin eliminaciones registradas</li>
          </ul>
        </div>
        
        {{#if (gt documentosGrupales.documentosPagados.length 0)}}
        <div class="alert alert-success">
          <h6><i class="fas fa-check-circle me-2"></i>Documentos Pagados ({{documentosGrupales.documentosPagados.length}})</h6>
          <p class="mb-0">Estos documentos tienen pago completo y est√°n listos para entrega inmediata.</p>
        </div>
        {{/if}}
        
        {{#if (gt documentosGrupales.documentosPendientes.length 0)}}
        <div class="alert alert-warning">
          <h6><i class="fas fa-exclamation-triangle me-2"></i>Documentos Pendientes de Pago ({{documentosGrupales.documentosPendientes.length}})</h6>
          <p class="mb-2">Los siguientes documentos tienen pago pendiente:</p>
          <ul class="mb-2">
            {{#each documentosGrupales.documentosPendientes}}
            <li><strong>{{this.codigoBarras}}</strong> - {{this.tipoDocumento}} ({{this.estadoPago}})</li>
            {{/each}}
          </ul>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="confirmarEntregaPendiente" required>
            <label class="form-check-label">
              <strong>Confirmo que he consultado con el matrizador y autorizo la entrega de documentos pendientes</strong>
            </label>
          </div>
        </div>
        {{/if}}
        
        <h6><i class="fas fa-file-alt me-2"></i>Documento Principal:</h6>
        <div class="card mb-3">
          <div class="card-body p-2">
            <strong>{{documento.codigoBarras}}</strong> - {{documento.tipoDocumento}}
            <br><small class="text-muted">{{documento.nombreCliente}}</small>
          </div>
        </div>
        
        <h6><i class="fas fa-plus-circle me-2"></i>Documentos Adicionales ({{documentosGrupales.cantidad}}):</h6>
        <div class="table-responsive mb-3">
          <table class="table table-sm">
            <thead class="table-light">
              <tr>
                <th>C√≥digo</th>
                <th>Tipo</th>
                <th>Matrizador</th>
                <th>Valor</th>
                <th>Estado Pago</th>
              </tr>
            </thead>
            <tbody>
              {{#each documentosGrupales.documentos}}
              <tr class="{{#unless (or (eq this.estadoPago 'pagado_completo') (eq this.estadoPago 'pagado_con_retencion'))}}table-warning{{/unless}}">
                <td><small>{{this.codigoBarras}}</small></td>
                <td>{{this.tipoDocumento}}</td>
                <td>{{#if this.matrizador}}{{this.matrizador.nombre}}{{else}}<span class="text-muted">No asignado</span>{{/if}}</td>
                <td>${{#if this.valorFactura}}{{formatMoney this.valorFactura}}{{else}}0.00{{/if}}</td>
                <td>
                  {{#if (eq this.estadoPago "pagado_completo")}}
                  <span class="badge bg-success">PAGADO</span>
                  {{else if (eq this.estadoPago "pagado_con_retencion")}}
                  <span class="badge bg-info">CON RETENCI√ìN</span>
                  {{else if (eq this.estadoPago "pago_parcial")}}
                  <span class="badge bg-warning text-dark">PARCIAL</span>
                  {{else}}
                  <span class="badge bg-danger">PENDIENTE</span>
                  {{/if}}
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        
        <div class="alert alert-info">
          <i class="fas fa-info-circle me-2"></i>
          <strong>Recepci√≥n:</strong> Tiene permisos completos para procesar entrega grupal de documentos de cualquier matrizador.
        </div>
        
        <div class="alert alert-warning">
          <i class="fas fa-exclamation-triangle me-2"></i>
          <strong>Importante:</strong> Se entregar√°n <strong>{{add documentosGrupales.cantidad 1}} documentos</strong> en total al receptor especificado.
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          <i class="fas fa-times me-1"></i> Cancelar
        </button>
        <button type="button" class="btn btn-success" onclick="confirmarEntregaGrupalRecepcion()">
          <i class="fas fa-boxes me-1"></i> Confirmar Entrega Grupal
        </button>
      </div>
    </div>
  </div>
</div>
{{/if}}

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Elementos para documentos CON c√≥digo de verificaci√≥n
    const verificacionCodigo = document.getElementById('verificacionCodigo');
    const verificacionLlamada = document.getElementById('verificacionLlamada');
    const divCodigoVerificacion = document.getElementById('divCodigoVerificacion');
    const divObservaciones = document.getElementById('divObservaciones');
    const codigoVerificacion = document.getElementById('codigoVerificacion');
    const observaciones = document.getElementById('observaciones');
    
    // Elementos para documentos SIN c√≥digo de verificaci√≥n
    const verificacionIdentidad = document.getElementById('verificacionIdentidad');
    const verificacionFactura = document.getElementById('verificacionFactura');
    const verificacionLlamadaAlt = document.getElementById('verificacionLlamadaAlt');
    const divObservacionesAlt = document.getElementById('divObservacionesAlt');
    const observacionesAlt = document.getElementById('observacionesAlt');
    
    // L√≥gica para documentos CON c√≥digo de verificaci√≥n
    if (verificacionCodigo && verificacionLlamada) {
      verificacionCodigo.addEventListener('change', updateVerificationMethod);
      verificacionLlamada.addEventListener('change', updateVerificationMethod);
      
      function updateVerificationMethod() {
        if (verificacionCodigo.checked) {
          divCodigoVerificacion.classList.remove('d-none');
          divObservaciones.classList.add('d-none');
          codigoVerificacion.setAttribute('required', '');
          observaciones.removeAttribute('required');
        } else {
          divCodigoVerificacion.classList.add('d-none');
          divObservaciones.classList.remove('d-none');
          codigoVerificacion.removeAttribute('required');
          observaciones.setAttribute('required', '');
        }
      }
    }
    
    // L√≥gica para documentos SIN c√≥digo de verificaci√≥n
    if (verificacionIdentidad && verificacionFactura && verificacionLlamadaAlt) {
      verificacionIdentidad.addEventListener('change', updateAlternativeVerification);
      verificacionFactura.addEventListener('change', updateAlternativeVerification);
      verificacionLlamadaAlt.addEventListener('change', updateAlternativeVerification);
      
      function updateAlternativeVerification() {
        if (verificacionLlamadaAlt.checked) {
          // Mostrar campo de observaciones para llamada
          divObservacionesAlt.classList.remove('d-none');
          observacionesAlt.setAttribute('required', '');
          observacionesAlt.placeholder = 'Ejemplo: Llam√© al 0987654321, atendi√≥ Mar√≠a P√©rez (esposa del titular), confirm√≥ que autoriza la entrega...';
        } else if (verificacionIdentidad.checked) {
          // Mostrar campo de observaciones para verificaci√≥n por c√©dula
          divObservacionesAlt.classList.remove('d-none');
          observacionesAlt.setAttribute('required', '');
          observacionesAlt.placeholder = 'Ejemplo: Cliente present√≥ c√©dula 1234567890 que coincide con los datos del documento. Nombre: Juan P√©rez...';
        } else if (verificacionFactura.checked) {
          // Mostrar campo de observaciones para verificaci√≥n por factura
          divObservacionesAlt.classList.remove('d-none');
          observacionesAlt.setAttribute('required', '');
          observacionesAlt.placeholder = 'Ejemplo: Cliente proporcion√≥ n√∫mero de factura 001-001-000123456 que coincide con el documento...';
        } else {
          // Ocultar observaciones
          divObservacionesAlt.classList.add('d-none');
          observacionesAlt.removeAttribute('required');
        }
      }
      
      // Inicializar estado
      updateAlternativeVerification();
    }

    // ============== FUNCIONES PARA ENTREGA GRUPAL - RECEPCI√ìN ==============
    
    // Mostrar modal de entrega grupal para recepci√≥n
    window.mostrarEntregaGrupalRecepcion = function() {
      // Validar que se hayan completado los datos del receptor
      const nombreReceptor = document.getElementById('nombreReceptor').value;
      const identificacionReceptor = document.getElementById('identificacionReceptor').value;
      const relacionReceptor = document.getElementById('relacionReceptor').value;
      
      if (!nombreReceptor || !identificacionReceptor || !relacionReceptor) {
        alert('‚ö†Ô∏è Debe completar todos los datos del receptor antes de proceder con entrega grupal');
        return;
      }
      
      // Mostrar detalles de documentos grupales
      document.getElementById('detallesDocumentosGrupales').style.display = 'block';
      
      // Mostrar modal de confirmaci√≥n
      const modal = new bootstrap.Modal(document.getElementById('modalEntregaGrupalRecepcion'));
      modal.show();
    };
    
    // Confirmar entrega grupal para recepci√≥n
    window.confirmarEntregaGrupalRecepcion = function() {
      // Verificar confirmaci√≥n de documentos pendientes si es necesario
      const confirmarPendiente = document.getElementById('confirmarEntregaPendiente');
      if (confirmarPendiente && !confirmarPendiente.checked) {
        alert('‚ö†Ô∏è Debe confirmar que ha consultado con el matrizador para documentos pendientes de pago');
        return;
      }
      
      // Obtener IDs de documentos adicionales
      const documentosIds = [
        {{#each documentosGrupales.documentos}}
        {{this.id}}{{#unless @last}},{{/unless}}
        {{/each}}
      ];
      
      if (documentosIds.length === 0) {
        alert('‚ùå No hay documentos adicionales para procesar');
        return;
      }
      
      // Configurar campos ocultos
      document.getElementById('entregaGrupal').value = 'true';
      document.getElementById('documentosAdicionales').value = documentosIds.join(',');
      document.getElementById('tipoEntregaGrupal').value = 'recepcion_completa';
      
      // Agregar campo de confirmaci√≥n de pendientes si existe
      if (confirmarPendiente && confirmarPendiente.checked) {
        // Crear campo oculto para confirmar entrega pendiente
        const inputConfirmar = document.createElement('input');
        inputConfirmar.type = 'hidden';
        inputConfirmar.name = 'confirmarEntregaPendiente';
        inputConfirmar.value = 'true';
        document.querySelector('form').appendChild(inputConfirmar);
      }
      
      // Actualizar texto del bot√≥n
      const btnConfirmar = document.getElementById('btnConfirmarEntrega');
      const tienePendientes = {{#if (gt documentosGrupales.documentosPendientes.length 0)}}true{{else}}false{{/if}};
      
      if (tienePendientes) {
        btnConfirmar.innerHTML = '<i class="fas fa-boxes me-2"></i> Confirmar Entrega Grupal (' + (documentosIds.length + 1) + ' documentos - ‚ö†Ô∏è Con Pendientes)';
        btnConfirmar.classList.remove('btn-primary');
        btnConfirmar.classList.add('btn-warning');
      } else {
        btnConfirmar.innerHTML = '<i class="fas fa-boxes me-2"></i> Confirmar Entrega Grupal (' + (documentosIds.length + 1) + ' documentos)';
        btnConfirmar.classList.remove('btn-primary');
        btnConfirmar.classList.add('btn-success');
      }
      
      // Cerrar modal
      const modal = bootstrap.Modal.getInstance(document.getElementById('modalEntregaGrupalRecepcion'));
      modal.hide();
      
      // Mostrar confirmaci√≥n
      const alertaGrupal = document.getElementById('alertaEntregaGrupal');
      alertaGrupal.classList.remove('alert-info');
      alertaGrupal.classList.add(tienePendientes ? 'alert-warning' : 'alert-success');
      alertaGrupal.innerHTML = `
        <div class="row align-items-center">
          <div class="col-md-8">
            <h6 class="alert-heading mb-1">
              <i class="fas fa-boxes ${tienePendientes ? 'text-warning' : 'text-success'} me-2"></i>
              <strong>üè¢ Entrega Grupal Activada</strong>
            </h6>
            <p class="mb-0">
              Se procesar√°n <strong>${documentosIds.length + 1} documentos</strong> en entrega grupal.
              ${tienePendientes ? '<br><small class="text-warning">‚ö†Ô∏è Incluye documentos pendientes de pago</small>' : ''}
              <br><small class="text-muted">Haga clic en "Confirmar Entrega Grupal" para procesar todos los documentos.</small>
            </p>
          </div>
          <div class="col-md-4 text-end">
            <button type="button" class="btn btn-outline-secondary btn-sm" onclick="cancelarEntregaGrupal()">
              <i class="fas fa-times me-1"></i> Cancelar Grupal
            </button>
          </div>
        </div>
      `;
      
      console.log('‚úÖ [RECEPCI√ìN] Entrega grupal configurada:', documentosIds.length + 1, 'documentos', tienePendientes ? '(con pendientes)' : '');
    };
    
    // Ocultar alerta de entrega grupal
    window.ocultarAlertaGrupal = function() {
      document.getElementById('alertaEntregaGrupal').style.display = 'none';
    };
    
    // Cancelar entrega grupal
    window.cancelarEntregaGrupal = function() {
      // Resetear campos ocultos
      document.getElementById('entregaGrupal').value = 'false';
      document.getElementById('documentosAdicionales').value = '';
      
      // Restaurar bot√≥n original
      const btnConfirmar = document.getElementById('btnConfirmarEntrega');
      btnConfirmar.innerHTML = '<i class="fas fa-check-circle me-2"></i> Confirmar Entrega';
      btnConfirmar.classList.remove('btn-success');
      btnConfirmar.classList.add('btn-primary');
      
      // Restaurar alerta original
      location.reload(); // Recargar para restaurar estado original
    };
    
    // Validaci√≥n antes de env√≠o del formulario
    document.querySelector('form').addEventListener('submit', function(e) {
      const entregaGrupal = document.getElementById('entregaGrupal').value;
      const tipoEntrega = document.getElementById('tipoEntregaGrupal').value;
      
      if (entregaGrupal === 'true') {
        console.log('üìã [RECEPCI√ìN] Enviando entrega grupal:', tipoEntrega);
        
        // Validar que todos los campos est√©n completos
        const nombreReceptor = document.getElementById('nombreReceptor').value;
        const identificacionReceptor = document.getElementById('identificacionReceptor').value;
        const relacionReceptor = document.getElementById('relacionReceptor').value;
        
        if (!nombreReceptor || !identificacionReceptor || !relacionReceptor) {
          e.preventDefault();
          alert('‚ùå Debe completar todos los datos del receptor para entrega grupal');
          return false;
        }
        
        // Confirmar entrega grupal
        if (!confirm(`¬øConfirma la entrega grupal de ${document.getElementById('documentosAdicionales').value.split(',').length + 1} documentos?`)) {
          e.preventDefault();
          return false;
        }
      }
      
      return true;
    });
  });
</script> 