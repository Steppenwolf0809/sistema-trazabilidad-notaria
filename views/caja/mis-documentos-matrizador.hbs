<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <h2><i class="fas fa-file-edit me-2"></i> Mis Documentos como Matrizadora</h2>
          <p class="text-muted mb-0">Documentos asignados a usted para procesamiento</p>
        </div>
        <div>
          <span class="badge bg-primary fs-6">{{stats.total}} documentos</span>
        </div>
      </div>

      <!-- Estadísticas rápidas -->
      <div class="row mb-4">
        <div class="col-md-3">
          <div class="card bg-warning text-white">
            <div class="card-body text-center">
              <h3 class="mb-1">{{stats.enProceso}}</h3>
              <small>En Proceso</small>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card bg-success text-white">
            <div class="card-body text-center">
              <h3 class="mb-1">{{stats.listos}}</h3>
              <small>Listos para Entrega</small>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card bg-info text-white">
            <div class="card-body text-center">
              <h3 class="mb-1">{{stats.entregados}}</h3>
              <small>Entregados</small>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card bg-danger text-white">
            <div class="card-body text-center">
              <h3 class="mb-1">{{stats.pendientesPago}}</h3>
              <small>Pendientes de Pago</small>
            </div>
          </div>
        </div>
      </div>

      <!-- Filtros -->
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="mb-0"><i class="fas fa-filter me-2"></i> Filtros</h5>
        </div>
        <div class="card-body">
          <form method="GET" action="/caja/mis-documentos">
            <div class="row">
              <div class="col-md-3">
                <label for="estado" class="form-label">Estado</label>
                <select name="estado" id="estado" class="form-select">
                  <option value="">Todos los estados</option>
                  <option value="en_proceso" {{#if (eq filtros.estado 'en_proceso')}}selected{{/if}}>En Proceso</option>
                  <option value="listo_para_entrega" {{#if (eq filtros.estado 'listo_para_entrega')}}selected{{/if}}>Listo para Entrega</option>
                  <option value="entregado" {{#if (eq filtros.estado 'entregado')}}selected{{/if}}>Entregado</option>
                </select>
              </div>
              <div class="col-md-3">
                <label for="estadoPago" class="form-label">Estado de Pago</label>
                <select name="estadoPago" id="estadoPago" class="form-select">
                  <option value="">Todos</option>
                  <option value="pendiente" {{#if (eq filtros.estadoPago 'pendiente')}}selected{{/if}}>Pendiente</option>
                  <option value="pagado" {{#if (eq filtros.estadoPago 'pagado')}}selected{{/if}}>Pagado</option>
                </select>
              </div>
              <div class="col-md-4">
                <label for="busqueda" class="form-label">Buscar</label>
                <input type="text" name="busqueda" id="busqueda" class="form-control" 
                       placeholder="Código, cliente, factura..." value="{{filtros.busqueda}}">
              </div>
              <div class="col-md-2">
                <label class="form-label">&nbsp;</label>
                <div class="d-grid">
                  <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i> Filtrar
                  </button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>

      <!-- Lista de documentos -->
      {{#if documentos}}
        <div class="card">
          <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-list me-2"></i> Documentos Asignados</h5>
          </div>
          <div class="card-body p-0">
            <div class="table-responsive">
              <table class="table table-striped table-hover mb-0">
                <thead class="table-dark">
                  <tr>
                    <th>Código</th>
                    <th>Tipo</th>
                    <th>Cliente</th>
                    <th>Estado</th>
                    <th>Estado Pago</th>
                    <th>Notificaciones</th>
                    <th>Fecha Registro</th>
                    <th>Acciones</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each documentos}}
                  <tr>
                    <td>
                      <code>{{codigoBarras}}</code>
                    </td>
                    <td>
                      <span class="badge bg-secondary">{{tipoDocumento}}</span>
                    </td>
                    <td>
                      <strong>{{nombreCliente}}</strong><br>
                      <small class="text-muted">{{identificacionCliente}}</small>
                    </td>
                    <td>
                      {{#if (eq estado 'en_proceso')}}
                        <span class="badge bg-warning">En Proceso</span>
                      {{else if (eq estado 'listo_para_entrega')}}
                        <span class="badge bg-success">Listo para Entrega</span>
                      {{else if (eq estado 'entregado')}}
                        <span class="badge bg-info">Entregado</span>
                      {{else}}
                        <span class="badge bg-secondary">{{estado}}</span>
                      {{/if}}
                    </td>
                    <td>
                      {{#if (eq estadoPago 'pagado')}}
                        <span class="badge bg-success">Pagado</span>
                      {{else}}
                        <span class="badge bg-danger">Pendiente</span>
                      {{/if}}
                    </td>
                    <td>
                      {{#if notificarAutomatico}}
                        <i class="fas fa-check text-success" title="Notificaciones activadas"></i>
                        <small class="text-success">Activadas</small>
                      {{else}}
                        <i class="fas fa-times text-danger" title="Notificaciones desactivadas"></i>
                        <small class="text-danger">Desactivadas</small>
                      {{/if}}
                    </td>
                    <td>
                      <small>{{formatDate created_at}}</small>
                    </td>
                    <td>
                      <div class="btn-group" role="group">
                        <a href="/caja/documentos/detalle/{{id}}" class="btn btn-sm btn-outline-primary" title="Ver detalle">
                          <i class="fas fa-eye"></i>
                        </a>
                        <a href="/caja/documentos/editar/{{id}}" class="btn btn-sm btn-outline-warning" title="Editar">
                          <i class="fas fa-edit"></i>
                        </a>
                        {{#if (eq estado 'en_proceso')}}
                          <button type="button" class="btn btn-sm btn-outline-success" 
                                  onclick="marcarListo({{id}})" title="Marcar como listo">
                            <i class="fas fa-check"></i>
                          </button>
                        {{/if}}
                      </div>
                    </td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      {{else}}
        <div class="card">
          <div class="card-body text-center py-5">
            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">No tienes documentos asignados</h4>
            <p class="text-muted">Los documentos que se te asignen como matrizadora aparecerán aquí.</p>
            <a href="/caja" class="btn btn-primary">
              <i class="fas fa-arrow-left me-2"></i> Volver al Dashboard
            </a>
          </div>
        </div>
      {{/if}}
    </div>
  </div>
</div>

<script>
function marcarListo(documentoId) {
  if (confirm('¿Está seguro de marcar este documento como listo para entrega?')) {
    fetch(`/caja/documentos/marcar-listo/${documentoId}`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      }
    })
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        alert('Documento marcado como listo para entrega');
        location.reload();
      } else {
        alert('Error: ' + data.message);
      }
    })
    .catch(error => {
      console.error('Error:', error);
      alert('Error al marcar documento como listo');
    });
  }
}
</script> 