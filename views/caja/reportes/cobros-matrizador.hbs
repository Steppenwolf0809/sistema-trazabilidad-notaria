{{!-- 2. FILTROS PERSISTENTES Y CLAROS --}}
<div class="row mb-4">
  <div class="col-12">
    <div class="card border-0 shadow-sm">
      <div class="card-header bg-light border-bottom">
        <h6 class="mb-0 text-dark">
          <i class="fas fa-filter me-2 text-success"></i>Filtros del Reporte de Comisiones
        </h6>
      </div>
      <div class="card-body">
        <form id="filtrosComisiones" method="GET" action="/caja/reportes/cobros-matrizador">
          <div class="row align-items-end">
            <div class="col-md-3">
              <label class="form-label text-muted small fw-bold">Período de Comisión</label>
              <select class="form-select" name="rango" id="rango">
                <option value="hoy" {{#eq filtros.rango 'hoy'}}selected{{/eq}}>Hoy</option>
                <option value="ayer" {{#eq filtros.rango 'ayer'}}selected{{/eq}}>Ayer</option>
                <option value="semana" {{#eq filtros.rango 'semana'}}selected{{/eq}}>Esta Semana</option>
                <option value="mes" {{#eq filtros.rango 'mes'}}selected{{/eq}}>Este Mes</option>
                <option value="ultimo_mes" {{#eq filtros.rango 'ultimo_mes'}}selected{{/eq}}>Últimos 30 Días</option>
                <option value="personalizado" {{#eq filtros.rango 'personalizado'}}selected{{/eq}}>Personalizado</option>
              </select>
            </div>
            
            <div class="col-md-2" id="fechaInicioContainer" {{#unless (eq filtros.rango 'personalizado')}}style="display:none"{{/unless}}>
              <label class="form-label text-muted small fw-bold">Fecha Inicio</label>
              <input type="date" class="form-control" name="fechaInicio" id="fechaInicio" value="{{filtros.fechaInicio}}">
            </div>
            
            <div class="col-md-2" id="fechaFinContainer" {{#unless (eq filtros.rango 'personalizado')}}style="display:none"{{/unless}}>
              <label class="form-label text-muted small fw-bold">Fecha Fin</label>
              <input type="date" class="form-control" name="fechaFin" id="fechaFin" value="{{filtros.fechaFin}}">
            </div>
            
            <div class="col-md-3">
              <label class="form-label text-muted small fw-bold">Matrizador</label>
              <select class="form-select" name="idMatrizador" id="idMatrizador">
                <option value="todos" {{#eq idMatrizadorSeleccionado 'todos'}}selected{{/eq}}>Todos los Matrizadores</option>
                {{#each matrizadores}}
                <option value="{{this.id}}" {{#eq ../idMatrizadorSeleccionado this.id}}selected{{/eq}}>{{this.nombre}}</option>
                {{/each}}
              </select>
              <!-- Debug: Mostrar valor seleccionado -->
              <small class="text-muted">Seleccionado: <code>{{idMatrizadorSeleccionado}}</code></small>
            </div>
            
            <div class="col-md-2">
              <button type="submit" class="btn btn-success w-100">
                <i class="fas fa-search me-1"></i>Generar Reporte
              </button>
            </div>
          </div>
          
          {{!-- INDICADORES VISUALES DE FILTROS ACTIVOS --}}
          {{#if (or (ne filtros.rango 'mes') (ne idMatrizadorSeleccionado 'todos'))}}
          <div class="mt-3 pt-3 border-top">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <small class="text-muted fw-bold">Filtros activos:</small>
                {{#unless (eq filtros.rango 'mes')}}
                <span class="badge bg-info ms-1">
                  <i class="fas fa-calendar me-1"></i>{{periodoTexto}}
                </span>
                {{/unless}}
                {{#unless (eq idMatrizadorSeleccionado 'todos')}}
                <span class="badge bg-success ms-1">
                  <i class="fas fa-user me-1"></i>
                  {{#if matrizadorSeleccionado}}
                    {{matrizadorSeleccionado.nombre}}
                  {{else}}
                    {{#each matrizadores}}
                      {{#eq this.id ../idMatrizadorSeleccionado}}{{this.nombre}}{{/eq}}
                    {{/each}}
                  {{/if}}
                </span>
                {{/unless}}
              </div>
              <button type="button" class="btn btn-outline-secondary btn-sm" onclick="limpiarFiltros()" title="Limpiar todos los filtros">
                <i class="fas fa-times me-1"></i>Limpiar Filtros
              </button>
            </div>
          </div>
          {{else}}
          <div class="mt-3 pt-3 border-top">
            <div class="d-flex justify-content-between align-items-center">
              <small class="text-muted">
                <i class="fas fa-info-circle me-1"></i>Mostrando: <strong>Este mes</strong> • <strong>Todos los matrizadores</strong>
              </small>
              <small class="text-muted">
                <i class="fas fa-lightbulb me-1"></i>Tip: Selecciona un matrizador específico para análisis detallado
              </small>
            </div>
          </div>
          {{/if}}
        </form>
      </div>
    </div>
  </div>
</div>

