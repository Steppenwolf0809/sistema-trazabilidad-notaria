<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
  // Debug: Verificar estado inicial
  console.log('🚀 Iniciando reporte de comisiones - Caja');
  console.log('📊 Estado inicial:');
  console.log('- Rango:', document.getElementById('rango').value);
  console.log('- Matrizador:', document.getElementById('idMatrizador').value);
  console.log('- Fecha inicio:', document.getElementById('fechaInicio').value);
  console.log('- Fecha fin:', document.getElementById('fechaFin').value);
  
  // Verificar opciones del select de matrizadores
  const matrizadorSelect = document.getElementById('idMatrizador');
  console.log('👥 Opciones de matrizadores:');
  for (let i = 0; i < matrizadorSelect.options.length; i++) {
    const option = matrizadorSelect.options[i];
    console.log(`  - ${option.value}: ${option.text} ${option.selected ? '(SELECCIONADO)' : ''}`);
  }
  
  // Restaurar estado de filtros desde localStorage
  function restaurarEstadoFiltros() {
    try {
      const estadoGuardado = localStorage.getItem('filtrosComisionesCaja');
      if (estadoGuardado) {
        const estado = JSON.parse(estadoGuardado);
        
        // Solo restaurar si no hay parámetros en la URL (primera carga)
        const urlParams = new URLSearchParams(window.location.search);
        if (!urlParams.has('rango') && !urlParams.has('idMatrizador')) {
          if (estado.rango) document.getElementById('rango').value = estado.rango;
          if (estado.idMatrizador) document.getElementById('idMatrizador').value = estado.idMatrizador;
          if (estado.fechaInicio) document.getElementById('fechaInicio').value = estado.fechaInicio;
          if (estado.fechaFin) document.getElementById('fechaFin').value = estado.fechaFin;
          
          // Mostrar fechas personalizadas si es necesario
          toggleFechasPersonalizadas();
        }
      }
    } catch (e) {
      console.log('Error restaurando filtros:', e);
    }
  }
  
  // Manejar cambio de período
  document.getElementById('rango').addEventListener('change', function() {
    const valor = this.value;
    const fechaInicioContainer = document.getElementById('fechaInicioContainer');
    const fechaFinContainer = document.getElementById('fechaFinContainer');
    
    if (valor === 'personalizado') {
      fechaInicioContainer.style.display = 'block';
      fechaFinContainer.style.display = 'block';
    } else {
      fechaInicioContainer.style.display = 'none';
      fechaFinContainer.style.display = 'none';
    }
    
    // Guardar estado inmediatamente
    guardarEstadoFiltros();
  });
  
  // Mejorar auto-submit al cambiar matrizador
  document.getElementById('idMatrizador').addEventListener('change', function() {
    const matrizadorSelect = this;
    const form = document.getElementById('filtrosComisiones');
    const selectedValue = matrizadorSelect.value;
    
    // Debug: Mostrar qué se está seleccionando
    console.log('🔍 Matrizador seleccionado:', selectedValue);
    
    // Mostrar indicador de carga
    matrizadorSelect.disabled = true;
    const originalText = matrizadorSelect.options[matrizadorSelect.selectedIndex].text;
    matrizadorSelect.options[matrizadorSelect.selectedIndex].text = '🔄 Cargando...';
    
    // Guardar estado antes de enviar
    guardarEstadoFiltros();
    
    // Obtener todos los valores del formulario
    const rangoValue = document.getElementById('rango').value;
    const fechaInicioValue = document.getElementById('fechaInicio').value;
    const fechaFinValue = document.getElementById('fechaFin').value;
    
    // Construir URL manualmente para mayor control
    const params = new URLSearchParams();
    params.append('rango', rangoValue);
    params.append('idMatrizador', selectedValue);
    
    // Solo agregar fechas si están definidas
    if (fechaInicioValue) params.append('fechaInicio', fechaInicioValue);
    if (fechaFinValue) params.append('fechaFin', fechaFinValue);
    
    const finalUrl = '/caja/reportes/cobros-matrizador?' + params.toString();
    
    // Debug: Mostrar URL final
    console.log('🌐 URL final:', finalUrl);
    
    // Enviar con todos los parámetros
    setTimeout(() => {
      window.location.href = finalUrl;
    }, 300); // Pequeño delay para mejor UX
  });
  
  // Guardar estado en localStorage para persistencia
  function guardarEstadoFiltros() {
    try {
      const estado = {
        rango: document.getElementById('rango').value,
        idMatrizador: document.getElementById('idMatrizador').value,
        fechaInicio: document.getElementById('fechaInicio').value,
        fechaFin: document.getElementById('fechaFin').value,
        timestamp: Date.now()
      };
      localStorage.setItem('filtrosComisionesCaja', JSON.stringify(estado));
    } catch (e) {
      console.log('Error guardando filtros:', e);
    }
  }
  
  // Event listeners para guardar estado (sin auto-submit)
  ['fechaInicio', 'fechaFin'].forEach(id => {
    const elemento = document.getElementById(id);
    if (elemento) {
      elemento.addEventListener('change', guardarEstadoFiltros);
    }
  });
  
  // Mejorar el botón de submit con feedback visual
  const submitBtn = document.querySelector('button[type="submit"]');
  if (submitBtn) {
    submitBtn.addEventListener('click', function(e) {
      // Guardar estado antes de enviar
      guardarEstadoFiltros();
      
      // Feedback visual
      const originalHTML = this.innerHTML;
      this.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Generando...';
      this.disabled = true;
      
      // Permitir que el formulario se envíe normalmente
      setTimeout(() => {
        this.innerHTML = originalHTML;
        this.disabled = false;
      }, 2000);
    });
  }
  
  // Restaurar estado al cargar la página
  restaurarEstadoFiltros();
  
  // Limpiar localStorage viejo (más de 24 horas)
  try {
    const estado = JSON.parse(localStorage.getItem('filtrosComisionesCaja') || '{}');
    if (estado.timestamp && (Date.now() - estado.timestamp) > 24 * 60 * 60 * 1000) {
      localStorage.removeItem('filtrosComisionesCaja');
    }
  } catch (e) {
    localStorage.removeItem('filtrosComisionesCaja');
  }
});

