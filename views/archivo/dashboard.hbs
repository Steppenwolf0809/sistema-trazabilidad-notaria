<!-- Sistema de Alertas de Documentos Atrasados -->
<div class="row mb-4">
  <div class="col-12">
    <div class="card border-warning">
      <div class="card-header bg-warning text-dark">
        <div class="d-flex justify-content-between align-items-center">
