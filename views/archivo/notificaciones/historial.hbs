<!--
  Componente Universal para el Historial de Notificaciones
  - Usado por: Admin, Recepci√≥n, Archivo, Matrizador
  - Contiene: Filtros, Estad√≠sticas y Tabla de Notificaciones
-->

<div class="container-fluid">
    <!-- Breadcrumb -->
    <div class="row mb-3">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/archivo">
                            <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        <i class="fas fa-bell me-1"></i>Control de Notificaciones
                    </li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>üëÅÔ∏è Control de Notificaciones</h2>
            <p class="text-muted mb-0">Un historial centralizado de todas las comunicaciones enviadas.</p>
        </div>
        {{#if stats.total}}
            <span class="badge bg-info fs-6">{{stats.total}} notificaciones</span>
        {{/if}}
    </div>
    
    <!-- Filtros Universales -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">üîç Filtros de Control</h5>
        </div>
        <div class="card-body">
            <form method="GET" action="/archivo/notificaciones/historial" id="filtros-notificaciones-form">
                <div class="row mb-3">
                    <div class="col-md-2">
                        <label class="form-label">üìÖ Desde:</label>
                        <input type="date" class="form-control" name="fechaDesde" value="{{filtros.fechaDesde}}">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">üìÖ Hasta:</label>
                        <input type="date" class="form-control" name="fechaHasta" value="{{filtros.fechaHasta}}">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">üì± Tipo:</label>
                        <select class="form-select" name="tipo">
                            <option value="">Todos</option>
                            <option value="documento_listo" {{#if (eq filtros.tipo 'documento_listo')}}selected{{/if}}>üìã Listo para Retiro</option>
                            <option value="entrega_confirmada" {{#if (eq filtros.tipo 'entrega_confirmada')}}selected{{/if}}>‚úÖ Entregado</option>
                            <option value="entrega_grupal" {{#if (eq filtros.tipo 'entrega_grupal')}}selected{{/if}}>üì¶ Entrega Grupal</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">üìß Canal:</label>
                        <select class="form-select" name="canal">
                            <option value="">Todos</option>
                            <option value="whatsapp" {{#if (eq filtros.canal 'whatsapp')}}selected{{/if}}>WhatsApp</option>
                            <option value="email" {{#if (eq filtros.canal 'email')}}selected{{/if}}>Email</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">‚úÖ Estado:</label>
                        <select class="form-select" name="estado">
                            <option value="">Todos</option>
                            <option value="enviado" {{#if (eq filtros.estado 'enviado')}}selected{{/if}}>Enviado</option>
                            <option value="error" {{#if (eq filtros.estado 'error')}}selected{{/if}}>Error</option>
                            <option value="pendiente" {{#if (eq filtros.estado 'pendiente')}}selected{{/if}}>Pendiente</option>
                        </select>
                    </div>
                    {{#if (or (eq @root.userRole "admin") (eq @root.userRole "recepcion"))}}
                    <div class="col-md-2">
                        <label class="form-label">üë®‚Äçüíº Matrizador:</label>
                        <select class="form-select" name="matrizadorId">
                            <option value="">Todos</option>
                            {{#each matrizadores}}
                            <option value="{{this.id}}" {{#if (eq ../filtros.matrizadorId (toString this.id))}}selected{{/if}}>
                                {{this.nombre}}
                            </option>
                            {{/each}}
                        </select>
                    </div>
                    {{/if}}
                </div>
                <div class="row">
                    <div class="col-md-8">
                        <label class="form-label">üîç B√∫squeda R√°pida:</label>
                        <input type="text" class="form-control" name="busqueda" 
                               value="{{filtros.busqueda}}" placeholder="C√≥digo de documento, nombre de cliente, N¬∞ factura o destinatario">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">&nbsp;</label>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary flex-fill">üîç Buscar</button>
                            <a href="/archivo/notificaciones/historial" class="btn btn-outline-secondary flex-fill">
                                üîÑ Limpiar
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Estad√≠sticas R√°pidas -->
    {{#if stats}}
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h3>{{stats.total}}</h3>
                    <p class="mb-0">üìä Total</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h3>{{stats.enviadas}}</h3>
                    <p class="mb-0">‚úÖ Enviadas</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body text-center">
                    <h3>{{stats.fallidas}}</h3>
                    <p class="mb-0">‚ùå Fallidas</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body text-center">
                    <h3>{{stats.pendientes}}</h3>
                    <p class="mb-0">‚è≥ Pendientes</p>
                </div>
            </div>
        </div>
    </div>
    {{/if}}

    <!-- Tabla Universal de Notificaciones -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">üìã Historial Completo de Notificaciones</h5>
        </div>
        <div class="card-body p-0">
          {{#if notificaciones.length}}
            <div class="table-responsive">
                <table class="table table-striped table-hover notificaciones-universal">
                    <thead class="table-dark">
                        <tr>
                            <th>Fecha/Hora</th>
                            <th>Documento</th>
                            <th>Cliente</th>
                            <th>Matrizador</th>
                            <th>Tipo</th>
                            <th>Canal</th>
                            <th>Destinatario</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each notificaciones}}
                        <tr>
                            <td>
                                <div class="d-flex flex-column">
                                    <span class="fw-bold">{{formatDate this.created_at "DD/MM/YYYY"}}</span>
                                    <small class="text-muted">{{formatDate this.created_at "HH:mm:ss"}}</small>
                                </div>
                            </td>
                            <td>
                                {{#if (esEntregaGrupal this.tipoEvento)}}
                                    <div class="d-flex flex-column">
                                        <span class="fw-bold text-success">üì¶ ENTREGA GRUPAL</span>
                                        <small class="text-info">{{this.metadatos.totalDocumentos}} documentos</small>
                                    </div>
                                {{else}}
                                    <div class="d-flex flex-column">
                                        <a href="/archivo/documentos/detalle/{{this.documento.id}}" class="fw-bold text-decoration-none">{{this.documento.codigoBarras}}</a>
                                        <small class="text-muted">{{this.documento.tipoDocumento}}</small>
                                        {{#if this.documento.numeroFactura}}
                                        <small class="text-info">üßæ {{this.documento.numeroFactura}}</small>
                                        {{/if}}
                                    </div>
                                {{/if}}
                            </td>
                            <td>
                                {{#if (esEntregaGrupal this.tipoEvento)}}
                                    {{this.metadatos.nombreCliente}}
                                {{else}}
                                    {{this.documento.nombreCliente}}
                                {{/if}}
                            </td>
                            <td>
                                {{#if (esEntregaGrupal this.tipoEvento)}}
                                     <span class="badge bg-secondary">M√∫ltiples</span>
                                {{else if this.documento.matrizador}}
                                    <span class="badge bg-info">{{this.documento.matrizador.nombre}}</span>
                                {{else}}
                                    <span class="badge bg-secondary">Sin Asignar</span>
                                {{/if}}
                            </td>
                            <td>
                                <span class="badge {{lookup @root.badgeClasses.tipo this.tipoEvento}}">
                                    {{capitalizar this.tipoEvento}}
                                </span>
                            </td>
                            <td>
                                <span class="badge {{lookup @root.badgeClasses.canal this.canal}}">
                                    <i class="{{lookup @root.iconClasses.canal this.canal}} me-1"></i> {{capitalizar this.canal}}
                                </span>
                            </td>
                            <td>
                                <div class="d-flex flex-column">
                                    {{#if this.destinatarioEmail}}
                                        <small>üìß {{this.destinatarioEmail}}</small>
                                    {{/if}}
                                    {{#if this.destinatarioTelefono}}
                                        <small>üì± {{this.destinatarioTelefono}}</small>
                                    {{/if}}
                                </div>
                            </td>
                            <td>
                                <span class="badge {{lookup @root.badgeClasses.estado this.estado}}">
                                    {{capitalizar this.estado}}
                                </span>
                            </td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary" onclick="verDetalleNotificacion({{this.id}})" title="Ver detalle">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>

            <!-- Paginaci√≥n Universal -->
            <div class="d-flex justify-content-center mt-4">
                <nav aria-label="Paginaci√≥n de notificaciones">
                    <ul class="pagination">
                        {{#if (gt currentPage 1)}}
                        <li class="page-item">
                            <a class="page-link" href="{{buildPaginationUrl @root.userRole (subtract currentPage 1) filtros}}">Anterior</a>
                        </li>
                        {{/if}}

                        {{#each (getPaginationItems currentPage totalPages) as |page|}}
                            {{#if page.isEllipsis}}
                                <li class="page-item disabled"><span class="page-link">...</span></li>
                            {{else}}
                                <li class="page-item {{#if page.isActive}}active{{/if}}">
                                    <a class="page-link" href="{{buildPaginationUrl @root.userRole page.pageNumber ../filtros}}">{{page.pageNumber}}</a>
                                </li>
                            {{/if}}
                        {{/each}}
                        
                        {{#if (lt currentPage totalPages)}}
                        <li class="page-item">
                            <a class="page-link" href="{{buildPaginationUrl @root.userRole (add currentPage 1) filtros}}">Siguiente</a>
                        </li>
                        {{/if}}
                    </ul>
                </nav>
            </div>
            {{else}}
                <div class="alert alert-info text-center" role="alert">
                    <i class="fas fa-info-circle me-2"></i>
                    No se encontraron notificaciones con los filtros aplicados.
                </div>
            {{/if}}
        </div>
    </div>
</div>

<!-- Modal Elegante para Detalles de Notificaci√≥n -->
<div class="modal fade" id="detalleNotificacionModal" tabindex="-1" aria-labelledby="detalleNotificacionModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <!-- Contenido se cargar√° din√°micamente aqu√≠ -->
    </div>
  </div>
</div>

<link rel="stylesheet" href="/css/notificaciones-optimizada.css">


<script>
    /**
     * Mostrar detalle elegante de notificaci√≥n
     * @param {number} notificacionId - ID de la notificaci√≥n
     */
    function verDetalleNotificacion(notificacionId) {
        console.log(`üîç Cargando detalle de notificaci√≥n ID: ${notificacionId}`);
        
        const modal = document.getElementById('detalleNotificacionModal');
        const modalContent = modal.querySelector('.modal-content');
        
        // Mostrar indicador de carga elegante
        modalContent.innerHTML = `
            <div class="modal-body text-center py-5">
                <div class="spinner-border text-primary mb-3" role="status">
                    <span class="visually-hidden">Cargando...</span>
                </div>
                <h5 class="text-muted">Cargando detalles...</h5>
                <p class="text-muted small">Obteniendo informaci√≥n de la notificaci√≥n</p>
            </div>
        `;
        
        // Mostrar modal inmediatamente con loading
        const modalInstance = new bootstrap.Modal(modal);
        modalInstance.show();
        
        // Cargar contenido real
        fetch(`/archivo/notificaciones/detalle/${notificacionId}`, {
            headers: {
                'Accept': 'text/html'
            }
        })
        .then(response => {
            if (!response.ok) {
                throw new Error(`HTTP ${response.status}: ${response.statusText}`);
            }
            return response.text();
        })
        .then(html => {
            modalContent.innerHTML = html;
            console.log('‚úÖ Detalle de notificaci√≥n cargado exitosamente');
        })
        .catch(error => {
            console.error('‚ùå Error al cargar detalle:', error);
            modalContent.innerHTML = `
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Error al cargar
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-center py-5">
                    <i class="fas fa-exclamation-triangle fa-3x text-danger mb-3"></i>
                    <h5 class="text-danger">No se pudo cargar el detalle</h5>
                    <p class="text-muted">${error.message}</p>
                    <button class="btn btn-primary" onclick="verDetalleNotificacion(${notificacionId})">
                        <i class="fas fa-redo me-1"></i>Reintentar
                    </button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            `;
        });
    }
</script> 