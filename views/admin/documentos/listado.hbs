<script>
// Scripts originales mantenerlos solo si no está en modo solo lectura
function marcarListo(documentoId) {
  // Función original...
}

function exportarDatos() {
  // Función para exportar datos de supervisión
  window.location.href = '/admin/reportes/documentos?formato=excel&' + $('#filtrosForm').serialize();
}
</script>
{{/unless}}

{{#if soloLectura}}
<script>
// Solo funciones de consulta para modo supervisión
function exportarDatos() {
  // Función para exportar datos de supervisión
  window.location.href = '/admin/reportes/documentos?formato=excel&' + $('#filtrosForm').serialize();
}

