{{!-- VISTA DE SUPERVISIÓN ADMIN - MODELO MAESTRO PERFECCIONADO --}}
{{!-- SEGREGACIÓN DE FUNCIONES: Admin solo puede VER documentos, no crear/editar/entregar --}}

<div class="card">
  <div class="card-header">
    <span><i class="fas fa-binoculars me-2"></i> Supervisión de Documentos</span>
  </div>
  <div class="card-body">
    <!-- Filtros Compactos MEJORADOS con Fechas -->
    <div class="row mb-4">
      <div class="col-md-12">
        <div class="card bg-light">
          <div class="card-body p-3">
            <form id="filtrosForm" method="GET" action="/admin/documentos/listado">
              <div class="row g-2">
                <div class="col-md-2">
                  <label for="filtroEstado" class="form-label small">Estado</label>
                  <select class="form-select form-select-sm" id="filtroEstado" name="estado">
                    <option value="">Todos</option>
                    <option value="en_proceso" {{#if (eq filtros.estado 'en_proceso')}}selected{{/if}}>En Proceso</option>
                    <option value="listo_para_entrega" {{#if (eq filtros.estado 'listo_para_entrega')}}selected{{/if}}>Listos</option>
                    <option value="entregado" {{#if (eq filtros.estado 'entregado')}}selected{{/if}}>Entregados</option>
                    <option value="nota_credito" {{#if (eq filtros.estado 'nota_credito')}}selected{{/if}}>Notas Crédito</option>
                  </select>
                </div>
                
                <div class="col-md-2">
                  <label for="filtroEstadoPago" class="form-label small">Estado Pago</label>
                  <select class="form-select form-select-sm" id="filtroEstadoPago" name="estadoPago">
                    <option value="">Todos</option>
                    <option value="pendiente" {{#if (eq filtros.estadoPago 'pendiente')}}selected{{/if}}>Pendiente</option>
                    <option value="pagado_completo" {{#if (eq filtros.estadoPago 'pagado_completo')}}selected{{/if}}>Pagado</option>
                    <option value="pagado_con_retencion" {{#if (eq filtros.estadoPago 'pagado_con_retencion')}}selected{{/if}}>Con Retención</option>
                    <option value="pago_parcial" {{#if (eq filtros.estadoPago 'pago_parcial')}}selected{{/if}}>Parcial</option>
                  </select>
                </div>
                
                <div class="col-md-2">
                  <label for="filtroMatrizador" class="form-label small">Matrizador</label>
                  <select class="form-select form-select-sm" id="filtroMatrizador" name="matrizadorId">
                    <option value="">Todos</option>
                    {{#each matrizadores}}
                    <option value="{{this.id}}" {{#if (eq ../filtros.matrizadorId this.id)}}selected{{/if}}>{{this.nombre}}</option>
                    {{/each}}
                  </select>
                </div>
                
                <div class="col-md-2">
                  <label for="fechaDesde" class="form-label small">Desde</label>
                  <input type="date" class="form-control form-control-sm" id="fechaDesde" name="fechaDesde" value="{{filtros.fechaDesde}}">
                </div>
                
                <div class="col-md-2">
                  <label for="fechaHasta" class="form-label small">Hasta</label>
                  <input type="date" class="form-control form-control-sm" id="fechaHasta" name="fechaHasta" value="{{filtros.fechaHasta}}">
                </div>
                
                <div class="col-md-2">
                  <label for="filtroBusqueda" class="form-label small">Búsqueda</label>
                  <input type="text" class="form-control form-control-sm" id="filtroBusqueda" name="busqueda" placeholder="Código, cliente..." value="{{filtros.busqueda}}">
                </div>
                
                <div class="col-md-12 text-end mt-2">
                  <button type="submit" class="btn btn-sm btn-primary">
                    <i class="fas fa-filter me-1"></i> Filtrar
                  </button>
                  <a href="/admin/documentos/listado" class="btn btn-sm btn-outline-secondary ms-1">
                    <i class="fas fa-times me-1"></i> Limpiar
                  </a>
                  <button type="button" class="btn btn-sm btn-success ms-2" onclick="exportarExcel()">
                    <i class="fas fa-download me-1"></i> Exportar Excel
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Resumen de resultados -->
    {{#if documentos}}
    <div class="row mb-3">
      <div class="col-md-12">
        <div class="alert alert-light mb-0 py-2">
          <div class="row align-items-center">
            <div class="col-md-6">
              <i class="fas fa-chart-bar me-2"></i>
              <strong>Resultados:</strong> {{documentos.length}} documentos encontrados
            </div>
            <div class="col-md-6 text-end">
              {{#if pagination.totalPages}}
              <small class="text-muted">Página {{pagination.currentPage}} de {{pagination.totalPages}}</small>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
    </div>
    {{/if}}
    
    <!-- 🎯 TABLA UNIVERSAL - MODELO MAESTRO CORREGIDO -->
    <div class="table-responsive">
      <table class="table table-hover tabla-ordenable table-documentos" id="tablaDocumentosAdmin">
        <thead>
          <tr>
            <th class="col-codigo ordenable" data-columna="codigoBarras" data-tipo="texto">
              <span>Código</span>
              <i class="fas fa-sort ms-1 sort-icon"></i>
            </th>
            <th class="col-cliente ordenable" data-columna="nombreCliente" data-tipo="texto">
              <span>Cliente</span>
              <i class="fas fa-sort ms-1 sort-icon"></i>
            </th>
            <th class="col-matrizador ordenable" data-columna="matrizador" data-tipo="texto">
              <span>Matrizador</span>
              <i class="fas fa-sort ms-1 sort-icon"></i>
            </th>
            <th class="col-fecha ordenable" data-columna="fechaFactura" data-tipo="fecha">
              <span>Fecha</span>
              <i class="fas fa-sort ms-1 sort-icon"></i>
            </th>
            <th class="col-estado ordenable" data-columna="estado" data-tipo="texto">
              <span>Estado Entrega</span>
              <i class="fas fa-sort ms-1 sort-icon"></i>
            </th>
            <th class="col-pago ordenable" data-columna="estadoPago" data-tipo="texto">
              <span>Estado Pago</span>
              <i class="fas fa-sort ms-1 sort-icon"></i>
            </th>
            <th class="col-valor ordenable" data-columna="valorFactura" data-tipo="numero">
              <span>Valor</span>
              <i class="fas fa-sort ms-1 sort-icon"></i>
            </th>
            <th class="col-acciones">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each documentos}}
          <tr>
            <!-- Código con formato mejorado -->
            <td class="col-codigo">
                <span class="codigo-documento">{{this.codigoBarras}}</span>
                <div class="tipo-documento">
                    <small class="text-muted">{{this.tipoDocumento}}</small>
                </div>
            </td>
            
            <!-- Cliente con formato mejorado (sin truncar) -->
            <td class="col-cliente">
              <div class="cliente-nombre">{{this.nombreCliente}}</div>
              <div class="cliente-identificacion">{{this.identificacionCliente}}</div>
            </td>
            
            <!-- Matrizador (sin cambios) -->
            <td class="col-matrizador">
              {{#if this.matrizador}}
              <span class="matrizador-universal" title="{{this.matrizador.nombre}}">
                {{getIniciales this.matrizador.nombre}}
              </span>
              {{else}}
              <span class="matrizador-universal sin-asignar" title="Sin asignar">
                ??
              </span>
              {{/if}}
            </td>
            
            <!-- Fecha (sin cambios) -->
            <td class="col-fecha">
              {{#if this.fechaFactura}}
              <span class="fecha-universal">{{formatFechaCorta this.fechaFactura}}</span>
              {{else}}
              <span class="fecha-universal sin-fecha">--/--/--</span>
              {{/if}}
            </td>
            
            <!-- Estado de Entrega (NUEVO BADGE) -->
            <td class="col-estado text-center">
              {{{badgeEstadoEntrega this.estado}}}
            </td>
            
            <!-- Estado de Pago (NUEVO BADGE) -->
            <td class="col-pago text-center">
              {{#if this.numeroFactura}}
                {{{badgeEstadoPago this.estadoPago}}}
              {{else}}
                <span class="badge bg-secondary" title="Documento sin factura asociada">
                    <i class="fas fa-file-invoice-dollar me-1"></i> S/F
                </span>
              {{/if}}
            </td>
            
            <!-- Valor con formato mejorado -->
            <td class="col-valor text-right">
              {{#if this.valorFactura}}
              <span class="valor-monetario">{{formatDineroCompleto this.valorFactura}}</span>
              {{else}}
              <span class="valor-monetario text-muted">$0.00</span>
              {{/if}}
            </td>
            
            <!-- Acciones (sin cambios) -->
            <td class="col-acciones text-center">
              <div class="btn-group btn-group-sm">
                <a href="/admin/documentos/detalle/{{this.id}}" class="btn btn-outline-primary btn-universal" title="Ver Detalle">
                  <i class="fas fa-eye"></i>
                </a>
                {{#if (eq this.estado 'entregado')}}
                <button class="btn btn-outline-success btn-universal" title="Entregado" disabled>
                  <i class="fas fa-check"></i>
                </button>
                {{/if}}
              </div>
            </td>
          </tr>
          {{else}}
          <tr>
            <td colspan="8" class="text-center py-5">
              <div class="sin-resultados">
                <i class="fas fa-search fa-2x mb-3 text-muted"></i>
                <h5 class="text-muted">No se encontraron documentos</h5>
                <p class="mb-0 text-muted">Pruebe ajustando los filtros de búsqueda</p>
              </div>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    
    <!-- Paginación MODERNA Y FUNCIONAL -->
    {{#if pagination}}
    <nav aria-label="Navegación de documentos" class="mt-4">
      <div class="row align-items-center">
        <div class="col-md-6">
          <p class="text-muted mb-0">
            Mostrando documentos {{#if documentos.length}}1 a {{documentos.length}}{{else}}0{{/if}} 
            {{#if pagination.totalPages}}de página {{pagination.currentPage}} de {{pagination.totalPages}}{{/if}}
          </p>
        </div>
        <div class="col-md-6">
          <ul class="pagination pagination-sm justify-content-end mb-0">
            <!-- Primera página -->
            {{#if (gt pagination.currentPage 1)}}
              <li class="page-item">
                <a class="page-link" href="?page=1{{buildQueryString filtros}}" title="Primera página">
                  <i class="fas fa-angle-double-left"></i>
                </a>
              </li>
            {{/if}}
            
            <!-- Página anterior -->
            {{#if pagination.hasPrev}}
              <li class="page-item">
                <a class="page-link" href="?page={{subtract pagination.currentPage 1}}{{buildQueryString filtros}}" title="Página anterior">
                  <i class="fas fa-angle-left"></i>
                </a>
              </li>
            {{else}}
              <li class="page-item disabled">
                <span class="page-link">
                  <i class="fas fa-angle-left"></i>
                </span>
              </li>
            {{/if}}
            
            <!-- Páginas numeradas (mostrar máximo 5) -->
            {{#each (generatePageNumbers pagination.currentPage pagination.totalPages)}}
              <li class="page-item {{#if (eq this ../pagination.currentPage)}}active{{/if}}">
                <a class="page-link" href="?page={{this}}{{buildQueryString ../filtros}}">
                  {{this}}
                </a>
              </li>
            {{/each}}
            
            <!-- Página siguiente -->
            {{#if pagination.hasNext}}
              <li class="page-item">
                <a class="page-link" href="?page={{add pagination.currentPage 1}}{{buildQueryString filtros}}" title="Página siguiente">
                  <i class="fas fa-angle-right"></i>
                </a>
              </li>
            {{else}}
              <li class="page-item disabled">
                <span class="page-link">
                  <i class="fas fa-angle-right"></i>
                </span>
              </li>
            {{/if}}
            
            <!-- Última página -->
            {{#if (lt pagination.currentPage pagination.totalPages)}}
              <li class="page-item">
                <a class="page-link" href="?page={{pagination.totalPages}}{{buildQueryString filtros}}" title="Última página">
                  <i class="fas fa-angle-double-right"></i>
                </a>
              </li>
            {{/if}}
          </ul>
        </div>
      </div>
    </nav>
    {{/if}}


  </div>
</div>

{{#if soloLectura}}
<script>
  document.addEventListener('DOMContentLoaded', function() {
    console.log('🎯 Inicializando tabla ADMIN - Sistema Universal v2.0');
    
    // Inicializar ordenamiento manual corregido
    inicializarOrdenamientoManual();
    
    // Inicializar filtros automáticos de fechas
    inicializarFiltrosFechas();
    
    console.log('✅ Vista ADMIN migrada al sistema universal - Funcionalidad completa');
  });

  // Función de ordenamiento manual específica para ADMIN
  function inicializarOrdenamientoManual() {
    console.log('🔧 Inicializando ordenamiento manual para ADMIN');
    
    // Buscar todos los headers ordenables
    const headersOrdenables = document.querySelectorAll('.tabla-ordenable th.ordenable');
    
    headersOrdenables.forEach(header => {
      header.style.cursor = 'pointer';
      header.addEventListener('click', function() {
        const columna = this.getAttribute('data-columna');
        const tipoColumna = this.getAttribute('data-tipo') || 'texto';
        
        console.log('📊 Click en columna ADMIN:', columna, tipoColumna);
        
        // Obtener dirección actual
        let direccion = 'asc';
        if (this.classList.contains('asc')) {
          direccion = 'desc';
        } else if (this.classList.contains('desc')) {
          direccion = 'asc';
        }
        
        // Limpiar otros headers
        headersOrdenables.forEach(h => {
          h.classList.remove('asc', 'desc', 'active');
          const icono = h.querySelector('.sort-icon');
          if (icono) {
            icono.className = 'fas fa-sort ms-1 sort-icon';
          }
        });
        
        // Marcar header actual
        this.classList.add(direccion, 'active');
        const icono = this.querySelector('.sort-icon');
        if (icono) {
          icono.className = `fas fa-sort-${direccion} ms-1 sort-icon`;
        }
        
        // Ejecutar ordenamiento por servidor
        const params = new URLSearchParams(window.location.search);
        params.set('ordenarPor', columna);
        params.set('ordenDireccion', direccion);
        
        window.location.search = params.toString();
      });
    });
    
    console.log('✅ Ordenamiento manual configurado para ADMIN:', headersOrdenables.length, 'columnas');
  }

  // Función para inicializar filtros automáticos de fechas
  function inicializarFiltrosFechas() {
    console.log('📅 Inicializando filtros automáticos de fechas');
    
    const fechaDesde = document.getElementById('fechaDesde');
    const fechaHasta = document.getElementById('fechaHasta');
    
    if (fechaDesde && fechaHasta) {
      [fechaDesde, fechaHasta].forEach(campo => {
        campo.addEventListener('change', function() {
          if (fechaDesde.value && fechaHasta.value) {
            console.log('📅 Aplicando filtro automático de fechas:', fechaDesde.value, 'a', fechaHasta.value);
            document.getElementById('filtrosForm').submit();
          }
        });
      });
      
      console.log('✅ Filtros automáticos de fechas configurados');
    }
  }

  function limpiarFiltrosAdmin() {
    document.getElementById('filtroBusqueda').value = '';
    document.getElementById('filtroEstado').value = '';
    document.getElementById('filtroEstadoPago').value = '';
    document.getElementById('filtroMatrizador').value = '';
    document.getElementById('fechaDesde').value = '';
    document.getElementById('fechaHasta').value = '';
    document.getElementById('filtrosForm').submit(); 
  }

  function exportarExcel() {
    const params = new URLSearchParams(window.location.search);
    params.set('formato', 'excel');
    window.location.href = `${window.location.pathname}?${params.toString()}`;
  }

  function exportarPDF() {
    const params = new URLSearchParams(window.location.search);
    params.set('formato', 'pdf');
    window.location.href = `${window.location.pathname}?${params.toString()}`;
  }
</script>
{{/if}}

