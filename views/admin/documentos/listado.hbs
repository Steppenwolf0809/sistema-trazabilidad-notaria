// Inicializar ordenamiento perfectamente funcional
document.addEventListener('DOMContentLoaded', function() {
  console.log('üéØ Inicializando tabla de supervisi√≥n PERFECTA - Modelo Maestro');
  
  // Inicializar ordenamiento de tablas con sistema corregido
  if (typeof inicializarOrdenamientoTablas === 'function') {
    inicializarOrdenamientoTablas();
    console.log('‚úÖ Ordenamiento funcional inicializado para admin');
  } else {
    console.warn('‚ö†Ô∏è Funci√≥n inicializarOrdenamientoTablas no encontrada - Inicializando ordenamiento manual');
    inicializarOrdenamientoManual();
  }
  
  // Inicializar tooltips mejorados
  const tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'));
  const tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
    return new bootstrap.Tooltip(tooltipTriggerEl, {
      delay: { show: 500, hide: 100 },
      placement: 'top'
    });
  });
  
  console.log('‚úÖ Tabla de supervisi√≥n PERFECTA cargada - Modelo Maestro aplicado');
});

// Funci√≥n de ordenamiento manual como respaldo
function inicializarOrdenamientoManual() {
  console.log('üîß Inicializando ordenamiento manual para admin');
  
  // Buscar todos los headers ordenables
  const headersOrdenables = document.querySelectorAll('.tabla-supervision-perfecta th.ordenable');
  
  headersOrdenables.forEach(header => {
    header.style.cursor = 'pointer';
    header.addEventListener('click', function() {
      const columna = this.getAttribute('data-columna');
      const tipoColumna = this.getAttribute('data-tipo') || 'texto';
      
      console.log('üìä Click en columna:', columna, tipoColumna);
      
      // Obtener direcci√≥n actual
      let direccion = 'asc';
      if (this.classList.contains('asc')) {
        direccion = 'desc';
      } else if (this.classList.contains('desc')) {
        direccion = 'asc';
      }
      
      // Limpiar otros headers
      headersOrdenables.forEach(h => {
        h.classList.remove('asc', 'desc', 'active');
        const icono = h.querySelector('.sort-icon');
        if (icono) {
          icono.className = 'fas fa-sort ms-1 sort-icon';
        }
      });
      
      // Marcar header actual
      this.classList.add(direccion, 'active');
      const icono = this.querySelector('.sort-icon');
      if (icono) {
        icono.className = `fas fa-sort-${direccion} ms-1 sort-icon`;
      }
      
      // Ejecutar ordenamiento por servidor
      const params = new URLSearchParams(window.location.search);
      params.set('ordenarPor', columna);
      params.set('ordenDireccion', direccion);
      
      window.location.search = params.toString();
    });
  });
  
  console.log('‚úÖ Ordenamiento manual configurado para', headersOrdenables.length, 'columnas');
}
</script>
