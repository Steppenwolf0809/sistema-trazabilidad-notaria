<!-- üîÑ AUTO-ACTUALIZACI√ìN Y JAVASCRIPT INTERACTIVO -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  // ============ FILTROS R√ÅPIDOS INTERACTIVOS ============
  document.querySelectorAll('[data-periodo]').forEach(btn => {
    btn.addEventListener('click', function() {
      const periodo = this.getAttribute('data-periodo');
      
      // Actualizar select
      document.getElementById('tipoPeriodo').value = periodo;
      
      // Destacar bot√≥n activo
      document.querySelectorAll('[data-periodo]').forEach(b => {
        b.classList.remove('active', 'btn-primary');
        b.classList.add('btn-outline-primary');
      });
      this.classList.remove('btn-outline-primary');
      this.classList.add('active', 'btn-primary');
      
      // Ocultar fechas personalizadas
      document.getElementById('fechasPersonalizadas').style.display = 'none';
      
      // Actualizar indicador de per√≠odo
      actualizarIndicadorPeriodo(periodo);
      
      // Enviar formulario autom√°ticamente
      document.getElementById('periodoForm').submit();
    });
  });
  
  // ============ MANEJO DEL SELECT DE PER√çODO ============
  document.getElementById('tipoPeriodo').addEventListener('change', function() {
    const valor = this.value;
    const fechasPersonalizadas = document.getElementById('fechasPersonalizadas');
    
    if (valor === 'personalizado') {
      fechasPersonalizadas.style.display = 'block';
    } else {
      fechasPersonalizadas.style.display = 'none';
      
      // Actualizar botones r√°pidos
      document.querySelectorAll('[data-periodo]').forEach(b => {
        b.classList.remove('active', 'btn-primary');
        b.classList.add('btn-outline-primary');
      });
      
      const botonCorrespondiente = document.querySelector(`[data-periodo="${valor}"]`);
      if (botonCorrespondiente) {
        botonCorrespondiente.classList.remove('btn-outline-primary');
        botonCorrespondiente.classList.add('active', 'btn-primary');
      }
    }
  });
  
  // ============ FUNCI√ìN PARA ACTUALIZAR INDICADOR ============
  function actualizarIndicadorPeriodo(periodo) {
    const indicador = document.getElementById('periodoActivo');
    const hoy = new Date();
    let texto = '';
    
    switch(periodo) {
      case 'hoy':
        texto = 'HOY - ' + hoy.toLocaleDateString('es-EC');
        break;
      case 'ayer':
        const ayer = new Date(hoy);
        ayer.setDate(ayer.getDate() - 1);
        texto = 'AYER - ' + ayer.toLocaleDateString('es-EC');
        break;
      case 'semana':
        texto = 'ESTA SEMANA';
        break;
      case 'mes':
        texto = 'ESTE MES';
        break;
      case 'ultimo_mes':
        texto = '√öLTIMOS 30 D√çAS';
        break;
      default:
        texto = periodo.toUpperCase();
    }
    
    if (indicador) {
      indicador.textContent = texto;
    }
  }
  
  // ============ AUTO-ACTUALIZACI√ìN INTELIGENTE ============
  {{#if periodo.esHoy}}
  // Solo auto-actualizar si estamos viendo "hoy"
  setInterval(function() {
    // Recargar p√°gina cada 5 minutos para datos frescos
    window.location.reload();
  }, 5 * 60 * 1000);
  {{/if}}
  
  // ============ ANIMACIONES SUAVES PARA CARDS ============
  document.querySelectorAll('.card').forEach(card => {
    card.addEventListener('mouseenter', function() {
