{{!-- SCRIPTS MEJORADOS --}}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
  // Manejar cambio de período
  document.getElementById('rango').addEventListener('change', function() {
    const valor = this.value;
    const fechaInicioContainer = document.getElementById('fechaInicioContainer');
    const fechaFinContainer = document.getElementById('fechaFinContainer');
    
    if (valor === 'personalizado') {
      fechaInicioContainer.style.display = 'block';
      fechaFinContainer.style.display = 'block';
    } else {
      fechaInicioContainer.style.display = 'none';
      fechaFinContainer.style.display = 'none';
    }
  });
  
  // Auto-submit al cambiar matrizador (con pequeño delay para mejor UX)
  document.getElementById('idMatrizador').addEventListener('change', function() {
    setTimeout(() => {
      document.getElementById('filtrosComisiones').submit();
    }, 100);
  });
  
  // Guardar estado en localStorage para persistencia
  function guardarEstadoFiltros() {
    const estado = {
      rango: document.getElementById('rango').value,
      idMatrizador: document.getElementById('idMatrizador').value,
      fechaInicio: document.getElementById('fechaInicio').value,
      fechaFin: document.getElementById('fechaFin').value
    };
    localStorage.setItem('filtrosComisionesAdmin', JSON.stringify(estado));
  }
  
  // Event listeners para guardar estado
  ['rango', 'idMatrizador', 'fechaInicio', 'fechaFin'].forEach(id => {
    const elemento = document.getElementById(id);
    if (elemento) {
      elemento.addEventListener('change', guardarEstadoFiltros);
    }
  });
});

// Gráfico mejorado de cobros por matrizador
{{#if datosGrafico.nombres.length}}
const ctx = document.getElementById('cobrosChart').getContext('2d');
new Chart(ctx, {
  type: 'bar',
  data: {
    labels: {{{json datosGrafico.nombres}}},
    datasets: [{
      label: 'Total Cobrado ($)',
      data: {{{json datosGrafico.montos}}},
      backgroundColor: 'rgba(40, 167, 69, 0.8)',
      borderColor: 'rgba(40, 167, 69, 1)',
      borderWidth: 2,
      borderRadius: 4
    }, {
      label: 'Documentos Cobrados',
      data: {{{json datosGrafico.documentos}}},
      type: 'line',
      yAxisID: 'y1',
      borderColor: 'rgba(255, 193, 7, 1)',
      backgroundColor: 'rgba(255, 193, 7, 0.2)',
      tension: 0.4,
      pointBackgroundColor: 'rgba(255, 193, 7, 1)',
      pointBorderColor: '#fff',
      pointBorderWidth: 2,
      pointRadius: 6
    }]
  },
  options: {
    responsive: true,
    maintainAspectRatio: false,
    interaction: {
      mode: 'index',
      intersect: false,
    },
    plugins: {
      legend: {
        position: 'top',
        labels: {
          usePointStyle: true,
          padding: 20
        }
      },
      title: {
        display: true,
        text: 'Análisis de Comisiones - {{periodoTexto}}',
        font: {
          size: 16,
          weight: 'bold'
        }
      }
    },
    scales: {
      y: {
        type: 'linear',
        display: true,
        position: 'left',
        beginAtZero: true,
        title: {
          display: true,
          text: 'Total Cobrado ($)'
        },
        ticks: {
          callback: function(value) {
            return '$' + value.toLocaleString();
          }
        }
      },
      y1: {
        type: 'linear',
        display: true,
        position: 'right',
        beginAtZero: true,
        title: {
          display: true,
          text: 'Número de Documentos'
        },
        grid: {
          drawOnChartArea: false,
        },
      }
    }
  }
});
{{/if}}

// Funciones de exportación mejoradas
function exportarExcel() {
  const params = new URLSearchParams(window.location.search);
  params.set('formato', 'excel');
  window.location.href = '/admin/reportes/cobros-matrizador?' + params.toString();
}

function imprimirReporte() {
  window.print();
}

// Función para mostrar/ocultar fechas personalizadas (compatibilidad)
function toggleFechasPersonalizadas() {
  const rango = document.getElementById('rango').value;
  const fechaInicioContainer = document.getElementById('fechaInicioContainer');
  const fechaFinContainer = document.getElementById('fechaFinContainer');
  
  if (rango === 'personalizado') {
    fechaInicioContainer.style.display = 'block';
    fechaFinContainer.style.display = 'block';
  } else {
    fechaInicioContainer.style.display = 'none';
    fechaFinContainer.style.display = 'none';
  }
}

// Función para exportar reporte (compatibilidad)
function exportarReporte() {
  exportarExcel();
}
</script>

