<!--
  Componente Universal para el Historial de Notificaciones
  - Usado por: Admin, Recepci√≥n, Archivo, Matrizador
  - Contiene: Filtros, Estad√≠sticas y Tabla de Notificaciones
-->

<div class="container-fluid">
    <!-- Breadcrumb -->
    <div class="row mb-3">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/{{@root.userRole}}/dashboard">
                            <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        <i class="fas fa-bell me-1"></i>Control de Notificaciones
                    </li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>üëÅÔ∏è Control de Notificaciones</h2>
            <p class="text-muted mb-0">Un historial centralizado de todas las comunicaciones enviadas.</p>
        </div>
        {{#if stats.total}}
            <span class="badge bg-info fs-6">{{stats.total}} notificaciones</span>
        {{/if}}
    </div>
    
    <!-- Filtros Universales -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">üîç Filtros de Control</h5>
        </div>
        <div class="card-body">
            <form method="GET" action="/{{@root.userRole}}/notificaciones/historial" id="filtros-notificaciones-form">
                <div class="row mb-3">
                    <div class="col-md-2">
                        <label class="form-label">üìÖ Desde:</label>
                        <input type="date" class="form-control" name="fechaDesde" value="{{filtros.fechaDesde}}">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">üìÖ Hasta:</label>
                        <input type="date" class="form-control" name="fechaHasta" value="{{filtros.fechaHasta}}">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">üì± Tipo:</label>
                        <select class="form-select" name="tipo">
                            <option value="">Todos</option>
                            <option value="documento_listo" {{#if (eq filtros.tipo 'documento_listo')}}selected{{/if}}>üìã Listo para Retiro</option>
                            <option value="entrega_confirmada" {{#if (eq filtros.tipo 'entrega_confirmada')}}selected{{/if}}>‚úÖ Entregado</option>
                            <option value="entrega_grupal" {{#if (eq filtros.tipo 'entrega_grupal')}}selected{{/if}}>üì¶ Entrega Grupal</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">üìß Canal:</label>
                        <select class="form-select" name="canal">
                            <option value="">Todos</option>
                            <option value="whatsapp" {{#if (eq filtros.canal 'whatsapp')}}selected{{/if}}>WhatsApp</option>
                            <option value="email" {{#if (eq filtros.canal 'email')}}selected{{/if}}>Email</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">‚úÖ Estado:</label>
                        <select class="form-select" name="estado">
                            <option value="">Todos</option>
                            <option value="enviado" {{#if (eq filtros.estado 'enviado')}}selected{{/if}}>Enviado</option>
                            <option value="error" {{#if (eq filtros.estado 'error')}}selected{{/if}}>Error</option>
                            <option value="pendiente" {{#if (eq filtros.estado 'pendiente')}}selected{{/if}}>Pendiente</option>
                        </select>
                    </div>
                    {{#if (or (eq @root.userRole "admin") (eq @root.userRole "recepcion"))}}
                    <div class="col-md-2">
                        <label class="form-label">üë®‚Äçüíº Matrizador:</label>
                        <select class="form-select" name="matrizadorId">
                            <option value="">Todos</option>
                            {{#each matrizadores}}
                            <option value="{{this.id}}" {{#if (eq ../filtros.matrizadorId (toString this.id))}}selected{{/if}}>
                                {{this.nombre}}
                            </option>
                            {{/each}}
                        </select>
                    </div>
                    {{/if}}
                </div>
                <div class="row">
                    <div class="col-md-8">
                        <label class="form-label">üîç B√∫squeda R√°pida:</label>
                        <input type="text" class="form-control" name="busqueda" 
                               value="{{filtros.busqueda}}" placeholder="C√≥digo de documento, nombre de cliente, N¬∞ factura o destinatario">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">&nbsp;</label>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary flex-fill">üîç Buscar</button>
                            <a href="/{{@root.userRole}}/notificaciones/historial" class="btn btn-outline-secondary flex-fill">
                                üîÑ Limpiar
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Estad√≠sticas R√°pidas -->
    {{#if stats}}
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h3>{{stats.total}}</h3>
                    <p class="mb-0">üìä Total</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h3>{{stats.enviadas}}</h3>
                    <p class="mb-0">‚úÖ Enviadas</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body text-center">
                    <h3>{{stats.fallidas}}</h3>
                    <p class="mb-0">‚ùå Fallidas</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body text-center">
                    <h3>{{stats.pendientes}}</h3>
                    <p class="mb-0">‚è≥ Pendientes</p>
                </div>
            </div>
        </div>
    </div>
    {{/if}}

    <!-- Tabla Optimizada para Legibilidad - Sin C√≥digo -->
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-bell me-2"></i>
                    Historial de Notificaciones
                </h5>
                {{#if stats.total}}
                    <span class="badge bg-light text-primary fs-6">
                        {{stats.total}} registros
                    </span>
                {{/if}}
            </div>
        </div>
        <div class="card-body p-0">
          {{#if notificaciones.length}}
            <!-- Informaci√≥n de estados -->
            <div class="alert alert-info mx-3 mt-3 mb-3">
                <small>
                    <strong>Estados:</strong>
                    <span class="badge bg-success ms-1">Enviado</span> WhatsApp entregado
                    <span class="badge bg-danger ms-1">Error</span> Fall√≥ el env√≠o
                    <span class="badge bg-warning text-dark ms-1">Pendiente</span> En proceso
                </small>
            </div>
            
            <div class="table-responsive">
                <table class="table notificaciones-historial-optimizado">
                    <thead>
                        <tr>
                            <th width="15%">üìÖ Fecha/Hora</th>
                            <th width="25%">üìÑ Documento</th>
                            <th width="30%">üë§ Cliente</th>
                            <th width="15%">üì± Enviado a</th>
                            <th width="10%">‚úÖ Estado</th>
                            <th width="5%">üëÅÔ∏è</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each notificaciones}}
                        <tr class="fila-notificacion">
                            <td class="fecha-celda">
                                <div class="fecha-principal">{{formatearFechaSolo this.created_at}}</div>
                                <div class="hora-secundaria">{{formatearHoraSolo this.created_at}}</div>
                            </td>
                            <td class="documento-celda">
                                {{#if (esEntregaGrupal this.tipoEvento)}}
                                    <div class="codigo-documento text-success">üì¶ ENTREGA GRUPAL</div>
                                    <div class="tipo-documento">
                                        <i class="fas fa-boxes"></i>
                                        {{this.metadatos.totalDocumentos}} documentos
                                    </div>
                                {{else}}
                                    <div class="codigo-documento">
                                        <a href="/{{../userRole}}/documentos/detalle/{{this.documento.id}}" class="text-decoration-none">
                                            {{formatearCodigoCompacto this.documento.codigoBarras}}
                                        </a>
                                    </div>
                                    <div class="tipo-documento">
                                        <i class="{{iconoTipoDocumento this.documento.tipoDocumento}}"></i>
                                        {{this.documento.tipoDocumento}}
                                    </div>
                                {{/if}}
                            </td>
                            <td class="cliente-celda">
                                {{#if (esEntregaGrupal this.tipoEvento)}}
                                    <div class="nombre-cliente">{{this.metadatos.nombreCliente}}</div>
                                    <div class="ci-cliente">Entrega grupal</div>
                                {{else}}
                                    <div class="nombre-cliente">{{this.documento.nombreCliente}}</div>
                                    {{#if this.documento.identificacionCliente}}
                                    <div class="ci-cliente">{{this.documento.identificacionCliente}}</div>
                                    {{/if}}
                                {{/if}}
                            </td>
                            <td class="telefono-celda">
                                <div class="telefono-info">
                                    <i class="fab fa-whatsapp"></i>
                                    {{destinatarioCensurado this.destinatario}}
                                </div>
                            </td>
                            <td class="estado-celda">
                                {{{estadoConColor this.estado}}}
                            </td>
                            <td class="acciones-celda">
                                <button class="btn btn-detalle" onclick="verDetalleNotificacion({{this.id}})" title="Ver detalle completo">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            
            <!-- Informaci√≥n de resultados mejorada -->
            <div class="d-flex justify-content-between align-items-center mt-3 p-4 bg-gradient" style="background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);">
                <div>
                    <strong class="text-primary">
                        <i class="fas fa-info-circle me-2"></i>
                        Mostrando {{notificaciones.length}} de {{stats.total}} notificaciones
                    </strong>
                    <div class="small text-muted mt-1">
                        Filtros aplicados: 
                        {{#if filtros.fechaDesde}}üìÖ Desde {{filtros.fechaDesde}}{{/if}}
                        {{#if filtros.estado}}‚úÖ {{filtros.estado}}{{/if}}
                        {{#if filtros.busqueda}}üîç "{{filtros.busqueda}}"{{/if}}
                    </div>
                </div>
                <div class="text-end">
                    <div class="text-muted small">
                        <i class="fas fa-clock me-1"></i>
                        Actualizado: {{formatDateTime "now"}}
                    </div>
                    <button class="btn btn-sm btn-outline-primary mt-1" onclick="location.reload()">
                        <i class="fas fa-sync-alt me-1"></i>Actualizar
                    </button>
                </div>
            </div>
          {{else}}
            <div class="text-center py-5">
                <i class="fas fa-bell-slash fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">üì≠ No se encontraron notificaciones</h5>
                <p class="text-muted">No hay notificaciones que coincidan con los filtros aplicados.</p>
                <button class="btn btn-primary" onclick="location.reload()">
                    <i class="fas fa-sync-alt me-1"></i>Actualizar
                </button>
            </div>
          {{/if}}
        </div>
    </div>
</div>

<!-- Modal Elegante para Detalles de Notificaci√≥n -->
<div class="modal fade" id="detalleNotificacionModal" tabindex="-1" aria-labelledby="detalleNotificacionModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <!-- Contenido se cargar√° din√°micamente aqu√≠ -->
    </div>
  </div>
</div>

<link rel="stylesheet" href="/css/notificaciones-optimizada.css">
<link rel="stylesheet" href="/css/notificaciones-legible.css">
<script src="/js/table-universal.js"></script>
<script>
    /**
     * Mostrar detalle elegante de notificaci√≥n
     * @param {number} notificacionId - ID de la notificaci√≥n
     */
    function verDetalleNotificacion(notificacionId) {
        console.log(`üîç Cargando detalle de notificaci√≥n ID: ${notificacionId}`);
        
        const modal = document.getElementById('detalleNotificacionModal');
        const modalContent = modal.querySelector('.modal-content');
        
        // Mostrar indicador de carga elegante
        modalContent.innerHTML = `
            <div class="modal-body text-center py-5">
                <div class="spinner-border text-primary mb-3" role="status">
                    <span class="visually-hidden">Cargando...</span>
                </div>
                <h5 class="text-muted">Cargando detalles...</h5>
                <p class="text-muted small">Obteniendo informaci√≥n de la notificaci√≥n</p>
            </div>
        `;
        
        // Mostrar modal inmediatamente con loading
        const modalInstance = new bootstrap.Modal(modal);
        modalInstance.show();
        
        // Cargar contenido real
        fetch(`/{{@root.userRole}}/notificaciones/detalle/${notificacionId}`, {
            headers: {
                'Accept': 'text/html'
            }
        })
        .then(response => {
            if (!response.ok) {
                throw new Error(`HTTP ${response.status}: ${response.statusText}`);
            }
            return response.text();
        })
        .then(html => {
            modalContent.innerHTML = html;
            console.log('‚úÖ Detalle de notificaci√≥n cargado exitosamente');
        })
        .catch(error => {
            console.error('‚ùå Error al cargar detalle:', error);
            modalContent.innerHTML = `
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Error al cargar
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-center py-5">
                    <i class="fas fa-exclamation-triangle fa-3x text-danger mb-3"></i>
                    <h5 class="text-danger">No se pudo cargar el detalle</h5>
                    <p class="text-muted">${error.message}</p>
                    <button class="btn btn-primary" onclick="verDetalleNotificacion(${notificacionId})">
                        <i class="fas fa-redo me-1"></i>Reintentar
                    </button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            `;
        });
    }
    
    /**
     * Reenviar notificaci√≥n (funcionalidad futura)
     * @param {number} notificacionId - ID de la notificaci√≥n
     */
    function reenviarNotificacion(notificacionId) {
        if (!confirm('¬øEst√° seguro de que desea reenviar esta notificaci√≥n?')) {
            return;
        }
        
        console.log(`üì± Reenviando notificaci√≥n ID: ${notificacionId}`);
        
        // Implementar l√≥gica de reenv√≠o
        fetch(`/{{@root.userRole}}/notificaciones/${notificacionId}/reenviar`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.exito) {
                alert('‚úÖ Notificaci√≥n reenviada exitosamente');
                location.reload(); // Recargar para ver el estado actualizado
            } else {
                alert(`‚ùå Error al reenviar: ${data.mensaje}`);
            }
        })
        .catch(error => {
            console.error('Error al reenviar:', error);
            alert('‚ùå Error al reenviar la notificaci√≥n');
        });
    }
    
    /**
     * Aplicar filtros de tabla
     */
    function aplicarFiltros() {
        const form = document.getElementById('filtros-notificaciones-form');
        if (form) {
            form.submit();
        }
    }
    
    /**
     * Limpiar filtros
     */
    function limpiarFiltros() {
        window.location.href = '/{{@root.userRole}}/notificaciones/historial';
    }
    
    // Inicializaci√≥n
    document.addEventListener('DOMContentLoaded', function() {
        console.log('üìã Tabla optimizada de notificaciones inicializada');
        
        // Auto-refresh cada 5 minutos
        setInterval(() => {
            console.log('üîÑ Auto-actualizando tabla de notificaciones...');
            location.reload();
        }, 5 * 60 * 1000);
        
        // Tooltip para botones
        const tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'));
        tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    });
</script> 