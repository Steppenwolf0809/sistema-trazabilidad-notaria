<body>
    <div class="d-flex">
        <nav class="sidebar bg-dark text-white p-3">
            <h3 class="mb-4">Archivo</h3>
            <ul class="nav flex-column">
                <li class="nav-item"><a class="nav-link text-white" href="/archivo">Dashboard</a></li>
                <li class="nav-item"><a class="nav-link text-white" href="/archivo/documentos/todos">Todos los Documentos</a></li>
                <li class="nav-item"><a class="nav-link text-white" href="/archivo/documentos/mis-documentos">Mis Documentos</a></li>
                <li class="nav-item"><a class="nav-link text-white" href="/archivo/notificaciones/historial"><i class="fas fa-bell"></i> Historial Notificaciones</a></li>
                <li class="nav-item mt-4"><span class="text-muted">Usuario: {{userName}} ({{userRole}})</span></li>
                <li class="nav-item"><a class="nav-link text-danger" href="/logout">Cerrar sesi贸n</a></li>
            </ul>
        </nav>
        <main class="flex-fill">
            {{{body}}}
        </main>
    </div>
    
    <!-- Scripts -->
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <!-- JavaScript Universal para Tablas -->
    <script src="/js/table-universal.js"></script>
    
    <!-- Script principal del sistema -->
    <script src="/js/main.js"></script>
    <script src="/js/fix-badges.js"></script>
    
    <!-- Script personalizado -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Detectar el rol actual basado en la URL
            const currentRole = window.location.pathname.split('/')[1]; // 'matrizador', 'recepcion', etc.
            
            // Corregir cualquier enlace que apunte a /admin
            if (currentRole !== 'admin') {
                document.querySelectorAll('a[href^="/admin"]').forEach(link => {
                    link.href = link.href.replace('/admin', '/' + currentRole);
                });
            }
            
            // Prevenir navegaci贸n no deseada
            document.addEventListener('click', function(e) {
                const target = e.target.closest('a');
                if (target && target.href) {
                    const url = new URL(target.href);
                    const path = url.pathname;
                    
                    // Si el enlace apunta a /admin y no somos admin, prevenir la navegaci贸n
                    if (path.startsWith('/admin') && currentRole !== 'admin') {
                        e.preventDefault();
                        console.log('Prevenida navegaci贸n a:', path);
                        
                        // Redirigir a la ruta equivalente en el rol actual
                        const newPath = path.replace('/admin', '/' + currentRole);
                        window.location.href = newPath;
                    }
                }
            });
        });
    </script>
</body>
