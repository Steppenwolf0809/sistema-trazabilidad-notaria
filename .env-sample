# Configuración del servidor
PORT=3000
NODE_ENV=development
HOST=localhost

# Habilitación de HTTPS
ENABLE_HTTPS=false
SSL_KEY_PATH=./certificates/server.key
SSL_CERT_PATH=./certificates/server.crt

# Configuración de la base de datos PostgreSQL
DB_HOST=localhost
DB_PORT=5433
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=notaria

# Clave secreta para JWT (autenticación)
JWT_SECRET=clave_secreta_notaria_2024
JWT_EXPIRATION=86400

# Configuración para sesiones
SESSION_SECRET=notaria-sistema-secret-key

# Tiempo de validez de QR (en segundos)
QR_EXPIRATION=43200

# Configuración para servicio de WhatsApp
WHATSAPP_API_KEY=tu_api_key
WHATSAPP_PHONE_NUMBER=tu_numero_whatsapp
WHATSAPP_API_URL=https://api.whatsapp.com/v1

# Configuración para correo electrónico
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=correo@notaria.com
EMAIL_PASS=contraseña_o_app_password
EMAIL_FROM=Notaría Décima Octava <correo@notaria.com>

# Configuración de notificaciones
DIAS_ALERTA_DOCUMENTO_SIN_RECOGER=7

# URL base del sistema (para enlaces en correos y QR)
BASE_URL=https://servidor-local.notaria:3000

# Configuración para notificaciones (simuladas en esta versión)
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false

# Instrucciones:
# 1. Copia este archivo y renómbralo a ".env"
# 2. Actualiza los valores según tu entorno
# 3. El archivo .env no debe incluirse en el control de versiones 